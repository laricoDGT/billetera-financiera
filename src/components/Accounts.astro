---
import { auth } from "../lib/auth";
import { query } from "../lib/db";

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

let accounts = [];
let totalBalance = 0;
let totalIncome = 0;
let totalExpenses = 0;

if (session) {
  const result = await query(
    "SELECT * FROM financial_accounts WHERE user_id = $1 ORDER BY created_at DESC",
    [session.user.id]
  );
  accounts = result.rows;
  totalBalance = accounts.reduce(
    (acc, account) => acc + parseFloat(account.balance),
    0
  );

  // Calculate Income and Expenses for the current month
  const transactionsResult = await query(
    `SELECT type, amount FROM financial_transactions 
     WHERE user_id = $1 
     AND date >= date_trunc('month', CURRENT_DATE)`,
    [session.user.id]
  );

  transactionsResult.rows.forEach((t) => {
    if (t.type === "Ingreso") {
      totalIncome += parseFloat(t.amount);
    } else if (t.type === "Gasto") {
      totalExpenses += parseFloat(t.amount);
    }
  });
}

const totalSavings = totalIncome - totalExpenses;

// Helper to format currency
const formatCurrency = (amount: number | string) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
  }).format(Number(amount));
};
---

<div
  id="accounts-page"
  class="hidden min-h-screen bg-gray-50 dark:bg-slate-900"
>
  <nav class="bg-white dark:bg-slate-800 shadow-sm sticky top-0 z-30">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-4">
          <button
            onclick="showPage('dashboard-page')"
            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-700"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          </button>
          <h1 class="text-xl font-bold text-gray-900 dark:text-white">
            Cuentas
          </h1>
        </div>
        <button
          onclick="showModal('add-account')"
          class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center space-x-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Nueva Cuenta</span>
        </button>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8">
    <!-- Total Balance Card -->
    <div
      class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl shadow-xl p-8 text-white mb-8"
    >
      <div class="text-sm opacity-90 mb-2">Balance Total</div>
      <div class="text-5xl font-bold mb-6">{formatCurrency(totalBalance)}</div>
      <div class="grid grid-cols-3 gap-4">
        <div>
          <div class="text-xs opacity-75">Ingresos (Mes)</div>
          <div class="text-xl font-semibold">{formatCurrency(totalIncome)}</div>
        </div>
        <div>
          <div class="text-xs opacity-75">Gastos (Mes)</div>
          <div class="text-xl font-semibold">
            {formatCurrency(totalExpenses)}
          </div>
        </div>
        <div>
          <div class="text-xs opacity-75">Ahorros (Mes)</div>
          <div class="text-xl font-semibold">
            {formatCurrency(totalSavings)}
          </div>
        </div>
      </div>
    </div>

    <!-- Accounts Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        accounts.map((account) => (
          <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-200 dark:border-slate-700 hover:shadow-lg transition">
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/20 rounded-xl flex items-center justify-center">
                <svg
                  class="w-6 h-6 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                  />
                </svg>
              </div>
              <div class="relative">
                <button
                  onclick={`toggleAccountDropdown('dropdown-${account.id}', event)`}
                  class="dropdown-btn text-gray-400 hover:text-gray-600 p-1 rounded-full hover:bg-gray-100 dark:hover:bg-slate-700 transition"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                  </svg>
                </button>
                <div
                  id={`dropdown-${account.id}`}
                  class="dropdown-menu absolute right-0 mt-1 w-48 bg-white dark:bg-slate-800 rounded-md shadow-lg py-1 z-10 hidden border border-gray-200 dark:border-slate-700"
                >
                  <button
                    onclick={`openEditAccountModal('${account.id}', '${account.name}', '${account.type}', '${account.balance}')`}
                    class="block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700"
                  >
                    Editar
                  </button>
                  <button
                    onclick={`deleteAccount('${account.id}')`}
                    class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100 dark:hover:bg-slate-700"
                  >
                    Eliminar
                  </button>
                </div>
              </div>
            </div>
            <div class="mb-2">
              <div class="text-sm text-gray-500 dark:text-gray-400">
                {account.name}
              </div>
              <div class="text-2xl font-bold text-gray-900 dark:text-white">
                {formatCurrency(account.balance)}
              </div>
            </div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mb-4">
              {account.type}
            </div>
            <div class="flex items-center justify-between text-sm">
              <span class="text-green-600 font-medium">Activo</span>
              <span class="text-gray-500 dark:text-gray-400">
                {account.currency}
              </span>
            </div>
          </div>
        ))
      }

      {
        accounts.length === 0 && (
          <div class="col-span-full text-center py-12 text-gray-500 dark:text-gray-400">
            No tienes cuentas registradas. Â¡Crea una nueva para empezar!
          </div>
        )
      }
    </div>
  </div>
</div>

<script is:inline>
  window.toggleAccountDropdown = function (id, event) {
    event.stopPropagation();
    const dropdown = document.getElementById(id);
    const isHidden = dropdown.classList.contains("hidden");

    // Close all other dropdowns
    document.querySelectorAll(".dropdown-menu").forEach((menu) => {
      menu.classList.add("hidden");
    });

    if (isHidden) {
      dropdown.classList.remove("hidden");
    }
  };

  // Close dropdowns when clicking outside
  document.addEventListener("click", function (event) {
    if (
      !event.target.closest(".dropdown-menu") &&
      !event.target.closest(".dropdown-btn")
    ) {
      document.querySelectorAll(".dropdown-menu").forEach((menu) => {
        menu.classList.add("hidden");
      });
    }
  });
</script>
