        <script>
          import { authClient } from "../lib/auth-client";

          const logoutBtn = document.getElementById("logout-btn");

          // Logout handler with complete data cleanup
          if (logoutBtn) {
            logoutBtn.addEventListener("click", async () => {
              try {
                // 1. Sign out from Better Auth
                await authClient.signOut();

                // 2. Clear all localStorage (preferences, cached data, etc.)
                localStorage.clear();

                // 3. Clear all sessionStorage
                sessionStorage.clear();

                // 4. Redirect to landing page
                (window as any).showPage("landing-page");
              } catch (error) {
                console.error("Error signing out:", error);
                // Even if there's an error, try to clean up local data
                localStorage.clear();
                sessionStorage.clear();
                (window as any).showPage("landing-page");
              }
            });
          }

          // Load and display user data
          async function loadUserData() {
            try {
              const session = await authClient.getSession();

              if (session?.data?.user) {
                const user = session.data.user;

                // Get user initials from name or email
                const getInitials = (name: string) => {
                  if (!name) return "U";
                  const names = name.trim().split(" ");
                  if (names.length >= 2) {
                    return (
                      names[0][0] + names[names.length - 1][0]
                    ).toUpperCase();
                  }
                  return name.substring(0, 2).toUpperCase();
                };

                // Use name if available, otherwise use email
                const displayName = user.name || user.email || "Usuario";
                const initials = getInitials(displayName);

                // Update navbar user info
                const userNameNav = document.getElementById("user-name-nav");
                const userInitialsNav =
                  document.getElementById("user-initials-nav");
                const userAvatarNav = document.getElementById(
                  "user-avatar-nav"
                ) as HTMLImageElement;
                const userAvatarPlaceholderNav = document.getElementById(
                  "user-avatar-placeholder-nav"
                );

                if (userNameNav) {
                  userNameNav.textContent = displayName;
                }

                if (userInitialsNav) {
                  userInitialsNav.textContent = initials;
                }

                // Handle profile picture display
                if (user.image && userAvatarNav && userAvatarPlaceholderNav) {
                  // User has a profile picture (from Google OAuth), show it
                  userAvatarNav.src = user.image;
                  userAvatarNav.classList.remove("hidden");
                  userAvatarPlaceholderNav.classList.add("hidden");
                } else if (userAvatarNav && userAvatarPlaceholderNav) {
                  // User has no profile picture (email/password login), show initials
                  userAvatarNav.classList.add("hidden");
                  userAvatarPlaceholderNav.classList.remove("hidden");
                }

                // Handle SuperAdmin elements
                const superAdminBadge =
                  document.getElementById("superadmin-badge");
                const adminPanelLink =
                  document.getElementById("admin-panel-link");

                if ((user as any).role === "superadmin") {
                  superAdminBadge?.classList.remove("hidden");
                  adminPanelLink?.classList.remove("hidden");
                } else {
                  superAdminBadge?.classList.add("hidden");
                  adminPanelLink?.classList.add("hidden");
                }
              }
            } catch (error) {
              console.error("Error loading user data:", error);
            }
          }

