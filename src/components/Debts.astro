---
import { auth } from "../lib/auth";
import { query } from "../lib/db";

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

let debts = [];

if (session) {
  const result = await query(
    `SELECT * FROM financial_debts WHERE user_id = $1 ORDER BY created_at DESC`,
    [session.user.id]
  );
  debts = result.rows;
}

// Helper to format currency
const formatCurrency = (amount: number | string) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
  }).format(Number(amount));
};

const getTypeLabel = (type: string) => {
  return type === 'receivable' ? 'Me deben' : 'Debo';
};

const getTypeColor = (type: string) => {
  return type === 'receivable' 
    ? 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
    : 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400';
};
---

<!-- ==================== DEBTS PAGE ==================== -->
<div id="debts-page" class="hidden min-h-screen bg-gray-50 dark:bg-slate-900">
  <nav class="bg-white dark:bg-slate-800 shadow-sm sticky top-0 z-30">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-4">
          <button
            onclick="showPage('dashboard-page')"
            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-700"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          </button>
          <h1 class="text-xl font-bold text-gray-900 dark:text-white">
            Deudas y Préstamos
          </h1>
        </div>
        <button
          onclick="showModal('add-debt')"
          class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center space-x-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Nueva Deuda</span>
        </button>
      </div>
    </div>
  </nav>

  <main class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Empty State -->
    {
      debts.length === 0 ? (
        <div class="text-center py-12">
          <div class="w-24 h-24 bg-indigo-100 dark:bg-indigo-900/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg
              class="w-12 h-12 text-indigo-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
            No tienes deudas registradas
          </h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">
            Comienza registrando tus deudas o préstamos para llevar un mejor
            control.
          </p>
          <button
            onclick="showModal('add-debt')"
            class="text-indigo-600 font-medium hover:text-indigo-700"
          >
            Registrar primera deuda &rarr;
          </button>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {debts.map((debt: any) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-200 dark:border-slate-700 relative group">
              
              <!-- Action Menu (Top Right) -->
              <div class="absolute top-4 right-4 flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <button 
                  onclick={`openEditDebtModal('${debt.id}', '${debt.type || 'payable'}', '${debt.name}', '${debt.total_amount}', '${debt.installment_amount || ''}', '${debt.term || ''}', '${debt.due_date || ''}')`}
                  class="p-1.5 text-gray-500 hover:text-indigo-600 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 rounded-lg transition"
                  title="Editar"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                </button>
                <button 
                  onclick={`deleteDebt('${debt.id}')`}
                  class="p-1.5 text-gray-500 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition"
                  title="Eliminar"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                </button>
              </div>

              <div class="flex justify-between items-start mb-4">
                <div>
                  <div class="flex items-center gap-2 mb-1">
                    <span class={`px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide ${getTypeColor(debt.type || 'payable')}`}>
                      {getTypeLabel(debt.type || 'payable')}
                    </span>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white truncate pr-8">
                    {debt.name}
                  </h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">
                    Vence:{" "}
                    {debt.due_date
                      ? new Date(debt.due_date).toLocaleDateString()
                      : "Sin fecha"}
                  </p>
                </div>
                <div class={`p-2 rounded-lg ${debt.type === 'receivable' ? 'bg-green-100 dark:bg-green-900/20' : 'bg-red-100 dark:bg-red-900/20'}`}>
                  <svg class={`w-6 h-6 ${debt.type === 'receivable' ? 'text-green-600' : 'text-red-600'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {debt.type === 'receivable' 
                      ? <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      : <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    }
                  </svg>
                </div>
              </div>

              <div class="space-y-3">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-500 dark:text-gray-400">Total</span>
                  <span class="font-medium text-gray-900 dark:text-white">
                    {formatCurrency(debt.total_amount)}
                  </span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-500 dark:text-gray-400">Restante</span>
                  <span class={`font-bold ${debt.type === 'receivable' ? 'text-green-600' : 'text-red-600'}`}>
                    {formatCurrency(debt.remaining_amount)}
                  </span>
                </div>

                {debt.term && (
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500 dark:text-gray-400">Plazo</span>
                    <span class="font-medium text-gray-900 dark:text-white">{debt.term} meses</span>
                  </div>
                )}

                {debt.installment_amount && (
                   <div class="flex justify-between text-sm">
                    <span class="text-gray-500 dark:text-gray-400">Cuota Mensual</span>
                    <span class="font-medium text-gray-900 dark:text-white">{formatCurrency(debt.installment_amount)}</span>
                  </div>
                )}

                <div class="w-full bg-gray-200 dark:bg-slate-700 rounded-full h-2.5 mt-2">
                  <div
                    class={`h-2.5 rounded-full ${debt.type === 'receivable' ? 'bg-green-600' : 'bg-red-600'}`}
                    style={`width: ${Math.round(((Number(debt.total_amount) - Number(debt.remaining_amount)) / Number(debt.total_amount)) * 100)}%`}
                  />
                </div>
                <div class="flex justify-between items-center mt-1">
                   <p class="text-xs text-gray-500 dark:text-gray-400">
                    {Math.round(((Number(debt.total_amount) - Number(debt.remaining_amount)) / Number(debt.total_amount)) * 100)}% Pagado
                  </p>
                  {Number(debt.remaining_amount) > 0 && (
                    <button 
                      onclick={`openPayDebtModal('${debt.id}', '${debt.name}', '${debt.installment_amount || debt.remaining_amount}')`}
                      class="text-xs font-medium text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 flex items-center gap-1"
                    >
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                      Registrar Pago
                    </button>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }
  </main>
</div>
