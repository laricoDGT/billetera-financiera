<script>
  import { authClient } from "../lib/auth-client";

  // Helper function to get user initials
  const getInitials = (name: string) => {
    if (!name) return "U";
    const names = name.trim().split(" ");
    if (names.length >= 2) {
      return (names[0][0] + names[names.length - 1][0]).toUpperCase();
    }
    return name.substring(0, 2).toUpperCase();
  };

  // Show success message
  const showSuccess = (message: string = "Cambios guardados exitosamente") => {
    const successMsg = document.getElementById("profile-success-message");
    const errorMsg = document.getElementById("profile-error-message");
    if (errorMsg) errorMsg.classList.add("hidden");
    if (successMsg) {
      successMsg.classList.remove("hidden");
      setTimeout(() => successMsg.classList.add("hidden"), 5000);
    }
  };

  // Show error message
  const showError = (message: string) => {
    const successMsg = document.getElementById("profile-success-message");
    const errorMsg = document.getElementById("profile-error-message");
    const errorText = document.getElementById("profile-error-text");
    if (successMsg) successMsg.classList.add("hidden");
    if (errorMsg && errorText) {
      errorText.textContent = message;
      errorMsg.classList.remove("hidden");
      setTimeout(() => errorMsg.classList.add("hidden"), 5000);
    }
  };

  // Load user data from session
  async function loadUserProfile() {
    try {
      const session = await authClient.getSession();

      if (session?.data?.user) {
        const user = session.data.user;

        // Use name if available, otherwise use email
        const displayName = user.name || user.email || "Usuario";
        const initials = getInitials(displayName);

        // Update profile header
        const profileDisplayName = document.getElementById(
          "profile-display-name",
        );
        const profileDisplayEmail = document.getElementById(
          "profile-display-email",
        );
        const profileInitials = document.getElementById("profile-initials");
        const profileAvatarImg = document.getElementById(
          "profile-avatar-img",
        ) as HTMLImageElement;
        const profileAvatarPlaceholder = document.getElementById(
          "profile-avatar-placeholder",
        );

        if (profileDisplayName) {
          profileDisplayName.textContent = displayName;
        }

        if (profileDisplayEmail) {
          profileDisplayEmail.textContent = user.email || "-";
        }

        if (profileInitials) {
          profileInitials.textContent = initials;
        }

        // Handle profile picture display
        if (user.image && profileAvatarImg && profileAvatarPlaceholder) {
          // User has a profile picture (from Google OAuth), show it
          profileAvatarImg.src = user.image;
          profileAvatarImg.classList.remove("hidden");
          profileAvatarPlaceholder.classList.add("hidden");
        } else if (profileAvatarImg && profileAvatarPlaceholder) {
          // User has no profile picture (email/password login), show initials
          profileAvatarImg.classList.add("hidden");
          profileAvatarPlaceholder.classList.remove("hidden");
        }

        // Show verification badge
        const verifiedBadge = document.getElementById("profile-verified-badge");
        const unverifiedBadge = document.getElementById(
          "profile-unverified-badge",
        );
        if (user.emailVerified) {
          verifiedBadge?.classList.remove("hidden");
          unverifiedBadge?.classList.add("hidden");
        } else {
          verifiedBadge?.classList.add("hidden");
          unverifiedBadge?.classList.remove("hidden");
        }

        // Populate form fields
        const nameInput = document.getElementById(
          "profile-name-input",
        ) as HTMLInputElement;
        const emailInput = document.getElementById(
          "profile-email-input",
        ) as HTMLInputElement;

        if (nameInput) {
          nameInput.value = user.name || "";
        }

        if (emailInput) {
          emailInput.value = user.email || "";
        }

        // Hide Security section if user doesn't have a password (OAuth login)
        // Better Auth stores accounts separately, so we check if user has password-based auth
        const securitySection = document.getElementById("security-section");
        if (securitySection) {
          // If user has accounts array, check if any are email/password
          const hasPasswordAuth = (user as any).accounts?.some(
            (account: any) => account.providerId === "credential",
          );

          // For simplicity, we can also check if user.emailVerified exists
          // OAuth users typically have emailVerified = true by default
          // But the safest way is to try to detect based on available data
          // Since Better Auth doesn't expose account info in session by default,
          // we'll hide it if user has an image (likely OAuth) and no explicit password indicator

          // Simple heuristic: if user has Google image, likely OAuth-only
          if (user.image && user.image.includes("googleusercontent.com")) {
            securitySection.classList.add("hidden");
          }
        }

        // Load preferences from localStorage
        loadPreferences();
      }
    } catch (error) {
      console.error("Error loading user profile:", error);
      showError("Error al cargar el perfil");
    }
  }

  // Load preferences from localStorage
  function loadPreferences() {
    const preferences = JSON.parse(
      localStorage.getItem("userPreferences") || "{}",
    );

    const emailNotif = document.getElementById(
      "pref-email-notifications",
    ) as HTMLInputElement;
    const pushNotif = document.getElementById(
      "pref-push-notifications",
    ) as HTMLInputElement;
    const autoReminders = document.getElementById(
      "pref-auto-reminders",
    ) as HTMLInputElement;
    const currency = document.getElementById(
      "pref-currency",
    ) as HTMLSelectElement;

    if (emailNotif) emailNotif.checked = preferences.emailNotifications ?? true;
    if (pushNotif) pushNotif.checked = preferences.pushNotifications ?? true;
    if (autoReminders)
      autoReminders.checked = preferences.autoReminders ?? true;
    if (currency) currency.value = preferences.currency || "PEN";
  }

  // Handle profile info form submission
  const profileInfoForm = document.getElementById("profile-info-form");
  if (profileInfoForm) {
    profileInfoForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const nameInput = document.getElementById(
        "profile-name-input",
      ) as HTMLInputElement;
      const saveBtn = document.getElementById(
        "save-profile-btn",
      ) as HTMLButtonElement;

      if (!nameInput) return;

      try {
        saveBtn.disabled = true;
        saveBtn.textContent = "Guardando...";

        // Update user profile via Better Auth native method
        const { data, error } = await authClient.updateUser({
          name: nameInput.value,
        });

        if (error) {
          throw new Error(error.message || "Error al actualizar el perfil");
        }

        showSuccess("Información actualizada exitosamente");
        // Reload user data to reflect changes
        await loadUserProfile();
      } catch (error: any) {
        console.error("Error updating profile:", error);
        showError(error.message || "Error al actualizar la información");
      } finally {
        saveBtn.disabled = false;
        saveBtn.textContent = "Guardar Cambios";
      }
    });
  }

  // Handle password change form submission
  const changePasswordForm = document.getElementById("change-password-form");
  if (changePasswordForm) {
    changePasswordForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const currentPassword = (
        document.getElementById("current-password") as HTMLInputElement
      )?.value;
      const newPassword = (
        document.getElementById("new-password") as HTMLInputElement
      )?.value;
      const confirmPassword = (
        document.getElementById("confirm-password") as HTMLInputElement
      )?.value;
      const changeBtn = document.getElementById(
        "change-password-btn",
      ) as HTMLButtonElement;

      // Debug logging
      console.log("Password change attempt:", {
        currentPassword: currentPassword ? "***" : "empty",
        newPassword: newPassword ? "***" : "empty",
        confirmPassword: confirmPassword ? "***" : "empty",
      });

      // Validation
      if (!currentPassword || !newPassword || !confirmPassword) {
        showError("Por favor completa todos los campos");
        return;
      }

      if (newPassword !== confirmPassword) {
        showError("Las contraseñas no coinciden");
        return;
      }

      if (newPassword.length < 8) {
        showError("La nueva contraseña debe tener al menos 8 caracteres");
        return;
      }

      try {
        changeBtn.disabled = true;
        changeBtn.textContent = "Cambiando...";

        // Use Better Auth native method for password change
        const { data, error } = await authClient.changePassword({
          currentPassword: currentPassword,
          newPassword: newPassword,
          revokeOtherSessions: false,
        });

        if (error) {
          throw new Error(error.message || "Error al cambiar la contraseña");
        }

        showSuccess("Contraseña cambiada exitosamente");
        // Clear form
        (
          document.getElementById("current-password") as HTMLInputElement
        ).value = "";
        (document.getElementById("new-password") as HTMLInputElement).value =
          "";
        (
          document.getElementById("confirm-password") as HTMLInputElement
        ).value = "";
      } catch (error: any) {
        console.error("Error changing password:", error);
        showError(error.message || "Error al cambiar la contraseña");
      } finally {
        changeBtn.disabled = false;
        changeBtn.textContent = "Cambiar Contraseña";
      }
    });
  }

  // Handle preferences form submission
  const preferencesForm = document.getElementById("preferences-form");
  if (preferencesForm) {
    preferencesForm.addEventListener("submit", (e) => {
      e.preventDefault();

      const emailNotif = (
        document.getElementById("pref-email-notifications") as HTMLInputElement
      )?.checked;
      const pushNotif = (
        document.getElementById("pref-push-notifications") as HTMLInputElement
      )?.checked;
      const autoReminders = (
        document.getElementById("pref-auto-reminders") as HTMLInputElement
      )?.checked;
      const currency = (
        document.getElementById("pref-currency") as HTMLSelectElement
      )?.value;

      const preferences = {
        emailNotifications: emailNotif,
        pushNotifications: pushNotif,
        autoReminders: autoReminders,
        currency: currency,
      };

      // Save to localStorage
      localStorage.setItem("userPreferences", JSON.stringify(preferences));
      showSuccess("Preferencias guardadas exitosamente");
    });
  }

  // Handle profile logout button
  const profileLogoutBtn = document.getElementById("profile-logout-btn");
  if (profileLogoutBtn) {
    profileLogoutBtn.addEventListener("click", async () => {
      try {
        await authClient.signOut();
        localStorage.clear();
        sessionStorage.clear();
        (window as any).showPage("landing-page");
      } catch (error) {
        console.error("Error signing out:", error);
        localStorage.clear();
        sessionStorage.clear();
        (window as any).showPage("landing-page");
      }
    });
  }

  // Handle delete account button
  const deleteAccountBtn = document.getElementById("delete-account-btn");
  if (deleteAccountBtn) {
    deleteAccountBtn.addEventListener("click", () => {
      const confirmed = confirm(
        "⚠️ ¿Estás seguro de que deseas eliminar tu cuenta?\n\nEsta acción es permanente y no se puede deshacer. Se eliminarán todos tus datos.",
      );

      if (confirmed) {
        const doubleConfirm = confirm(
          "⚠️ ÚLTIMA CONFIRMACIÓN\n\n¿Realmente deseas eliminar tu cuenta de forma permanente?",
        );

