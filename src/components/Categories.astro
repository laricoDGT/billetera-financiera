    <!-- Summary -->
    <div
      class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-200 dark:border-slate-700 mb-6"
    >
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
        Gastos por Categoría - {capitalizedMonth}
      </h2>

      {
        activeCategories.length === 0 ? (
          categories.length === 0 ? (
            <div class="text-center py-8 text-gray-500">
              No tienes categorías configuradas. Crea una nueva para empezar.
            </div>
          ) : (
            <div class="text-center py-8 text-gray-500">
              No hay movimientos en este mes.
            </div>
          )
        ) : (
          <div class="grid md:grid-cols-2 gap-6">
            <div class="space-y-4">
              {activeCategories
                .slice(0, Math.ceil(activeCategories.length / 2))
                .map((category) => {
                  const percentage = calculatePercentage(
                    category.spent,
                    category.budget
                  );
                  let colorClass = "bg-indigo-600";
                  if (percentage > 80) colorClass = "bg-red-600";
                  else if (percentage > 50) colorClass = "bg-orange-500";
                  else if (percentage > 25) colorClass = "bg-blue-600";

                  return (
                    <div>
                      <div class="flex justify-between items-center mb-2">
                        <div class="flex items-center space-x-2">
                          <span class="text-2xl">{category.icon}</span>
                          <span class="font-medium text-gray-900 dark:text-white">
                            {category.name}
                          </span>
                        </div>
                        <div class="flex items-center gap-3">
                          <span class="font-bold text-gray-900 dark:text-white">
                            {formatCurrency(category.spent)}
                          </span>
                          <div class="flex gap-1">
                            <button
                              onclick={`openEditCategoryModal('${category.id}', '${category.name}', '${category.icon}', '${category.budget}')`}
                              class="text-gray-400 hover:text-indigo-600 transition"
                              title="Editar"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-4 w-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                                />
                              </svg>
                            </button>
                            <button
                              onclick={`deleteCategory('${category.id}')`}
                              class="text-gray-400 hover:text-red-600 transition"
                              title="Eliminar"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-4 w-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                />
                              </svg>
                            </button>
                          </div>
                        </div>
                      </div>
                      <div class="w-full bg-gray-200 dark:bg-slate-700 rounded-full h-3">
                        <div
                          class={`${colorClass} h-3 rounded-full`}
                          style={`width: ${percentage}%`}
                        />
                      </div>
                      <div
                        class={`text-xs mt-1 ${percentage > 80 ? "text-red-500" : "text-gray-500 dark:text-gray-400"}`}
                      >
                        {percentage > 80 && "⚠️ "}
                        {percentage}% del presupuesto
                      </div>
                    </div>
                  );
                })}
            </div>
            <div class="space-y-4">
              {activeCategories
                .slice(Math.ceil(activeCategories.length / 2))
                .map((category) => {
                  const percentage = calculatePercentage(
                    category.spent,
                    category.budget
                  );
                  let colorClass = "bg-indigo-600";
                  if (percentage > 80) colorClass = "bg-red-600";
                  else if (percentage > 50) colorClass = "bg-orange-500";
                  else if (percentage > 25) colorClass = "bg-blue-600";

                  return (
                    <div>
                      <div class="flex justify-between items-center mb-2">
                        <div class="flex items-center space-x-2">
                          <span class="text-2xl">{category.icon}</span>
                          <span class="font-medium text-gray-900 dark:text-white">
                            {category.name}
                          </span>
                        </div>
                        <div class="flex items-center gap-3">
                          <span class="font-bold text-gray-900 dark:text-white">
                            {formatCurrency(category.spent)}
                          </span>
                          <div class="flex gap-1">
                            <button
                              onclick={`openEditCategoryModal('${category.id}', '${category.name}', '${category.icon}', '${category.budget}')`}
                              class="text-gray-400 hover:text-indigo-600 transition"
                              title="Editar"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-4 w-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                                />
                              </svg>
                            </button>
                            <button
                              onclick={`deleteCategory('${category.id}')`}
                              class="text-gray-400 hover:text-red-600 transition"
                              title="Eliminar"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-4 w-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                />
                              </svg>
                            </button>
                          </div>
                        </div>
                      </div>
                      <div class="w-full bg-gray-200 dark:bg-slate-700 rounded-full h-3">
                        <div
                          class={`${colorClass} h-3 rounded-full`}
                          style={`width: ${percentage}%`}
                        />
                      </div>
                      <div
                        class={`text-xs mt-1 ${percentage > 80 ? "text-red-500" : "text-gray-500 dark:text-gray-400"}`}
                      >
                        {percentage > 80 && "⚠️ "}
                        {percentage}% del presupuesto
                      </div>
                    </div>
                  );
                })}
            </div>
          </div>
        )
      }
    </div>

    <!-- Category Cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        categories.map((category) => {
          const percentage = calculatePercentage(
            category.spent,
            category.budget
          );
          let badgeClass =
            "bg-indigo-100 dark:bg-indigo-900/20 text-indigo-600";
          if (percentage > 80)
            badgeClass = "bg-red-100 dark:bg-red-900/20 text-red-600";
          else if (percentage > 50)
            badgeClass = "bg-orange-100 dark:bg-orange-900/20 text-orange-600";
          else if (percentage > 25)
            badgeClass = "bg-blue-100 dark:bg-blue-900/20 text-blue-600";

          return (
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-200 dark:border-slate-700 hover:shadow-lg transition">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <span class="text-3xl">{category.icon}</span>
                  <div>
                    <h3 class="font-semibold text-gray-900 dark:text-white">
                      {category.name}
                    </h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      {category.transaction_count} transacciones
                    </p>
                  </div>
                </div>
                <div class="flex gap-1">
                  <button
                    onclick={`openEditCategoryModal('${category.id}', '${category.name}', '${category.icon}', '${category.budget}')`}
                    class="text-gray-400 hover:text-indigo-600 transition"
                    title="Editar"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                      />
                    </svg>
                  </button>
                  <button
                    onclick={`deleteCategory('${category.id}')`}
                    class="text-gray-400 hover:text-red-600 transition"
                    title="Eliminar"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  </button>
                </div>
              </div>
              <div class="flex items-center justify-between">
                <div>
                  <div class="text-2xl font-bold text-gray-900 dark:text-white">
                    {formatCurrency(category.spent)}
                  </div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">
                    de {formatCurrency(category.budget)}
                  </div>
                </div>
                <div class="text-right">
                  <span
                    class={`text-xs px-2 py-1 rounded-full font-medium ${badgeClass}`}
                  >
                    {percentage}%
                  </span>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</div>
