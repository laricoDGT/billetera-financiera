---
import { auth } from "../lib/auth";
import { query } from "../lib/db";
import { ensureCategories } from "../lib/categories";

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

let categories = [];

if (session) {
  await ensureCategories(session.user.id);

  const result = await query(
    `SELECT 
        c.*, 
        COALESCE(SUM(t.amount), 0) as spent,
        COUNT(t.id) as transaction_count
     FROM financial_categories c
     LEFT JOIN financial_transactions t ON t.category = c.name 
        AND t.user_id = c.user_id 
        AND t.date >= date_trunc('month', CURRENT_DATE)
     WHERE c.user_id = $1
     GROUP BY c.id
     ORDER BY spent DESC`,
    [session.user.id]
  );
  categories = result.rows;
}

// Helper to format currency
const formatCurrency = (amount: number | string) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
  }).format(Number(amount));
};

// Helper to calculate percentage
const calculatePercentage = (spent: number, budget: number) => {
  if (!budget || budget === 0) return 0;
  return Math.min(Math.round((Number(spent) / Number(budget)) * 100), 100);
};

const currentMonthName = new Intl.DateTimeFormat("es-ES", {
  month: "long",
}).format(new Date());
const capitalizedMonth =
  currentMonthName.charAt(0).toUpperCase() + currentMonthName.slice(1);

const activeCategories = categories.filter((c) => Number(c.spent) > 0);
---

<!-- ==================== 7. CATEGORIES PAGE ==================== -->
<div
  id="categories-page"
  class="hidden min-h-screen bg-gray-50 dark:bg-slate-900"
>
  <nav class="bg-white dark:bg-slate-800 shadow-sm sticky top-0 z-30">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-4">
          <button
            onclick="showPage('dashboard-page')"
            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-700"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          </button>
          <h1 class="text-xl font-bold text-gray-900 dark:text-white">
            Categorías
          </h1>
        </div>
        <button
          onclick="showModal('add-category')"
          class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center space-x-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Nueva</span>
        </button>
      </div>
    </div>
  </nav>

