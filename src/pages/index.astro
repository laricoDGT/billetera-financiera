---
import "../styles/global.css";
export const prerender = false;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>LaricoWallet - Tu billetera financiera inteligente</title>
  </head>
  <body class="bg-gray-50 transition-colors duration-300">
    <div id="landing-page" class="min-h-screen">
      <!-- Navbar Landing -->
      <nav class="bg-white dark:bg-slate-900 shadow-sm sticky top-0 z-30">
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <div class="flex items-center space-x-2">
              <div
                class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center"
              >
                <span class="text-white font-bold text-lg">F</span>
              </div>
              <span class="text-xl font-bold text-gray-900 dark:text-white"
                >LaricoWallet</span
              >
            </div>
            <div class="hidden md:flex items-center space-x-8">
              <a
                href="#features"
                class="text-gray-600 dark:text-gray-300 hover:text-indigo-600"
                >Características</a
              >
              <a
                href="#pricing"
                class="text-gray-600 dark:text-gray-300 hover:text-indigo-600"
                >Precios</a
              >
              <a
                href="#about"
                class="text-gray-600 dark:text-gray-300 hover:text-indigo-600"
                >Acerca de</a
              >
            </div>
            <div class="flex items-center space-x-3">
              <button
                id="theme-toggle"
                class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-800"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
                  ></path>
                </svg>
              </button>
              <a
                href="/login"
                class="text-indigo-600 font-medium hover:text-indigo-700"
                >Entrar</a
              >
              <a
                href="/register"
                class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition"
                >Comenzar</a
              >
            </div>
          </div>
        </div>
      </nav>

      <!-- Hero Section -->
      <section class="relative overflow-hidden">
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32">
          <div class="text-center">
            <h1
              class="text-5xl sm:text-6xl font-bold text-gray-900 dark:text-white mb-6"
            >
              Controla tus <span class="text-indigo-600">finanzas</span><br />de
              manera inteligente
            </h1>
            <p
              class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto"
            >
              Gestiona gastos, deudas, ahorros y créditos en un solo lugar.
              Simple, claro y poderoso.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/register"
                class="bg-indigo-600 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-indigo-700 transform hover:scale-105 transition shadow-lg text-center"
              >
                Comenzar gratis
              </a>
              <button
                class="bg-white dark:bg-slate-800 text-gray-900 dark:text-white px-8 py-4 rounded-xl font-semibold text-lg hover:shadow-xl transition border border-gray-200 dark:border-slate-700"
              >
                Ver demo
              </button>
            </div>
          </div>

          <!-- Hero Image/Mockup -->
          <div class="mt-16 relative">
            <div
              class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-2xl p-8 mx-auto max-w-5xl"
            >
              <div
                class="bg-white dark:bg-slate-900 rounded-xl shadow-xl p-6 space-y-4"
              >
                <div class="flex items-center justify-between">
                  <div class="h-3 w-3 rounded-full bg-red-500"></div>
                  <div class="h-3 w-3 rounded-full bg-yellow-500"></div>
                  <div class="h-3 w-3 rounded-full bg-green-500"></div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div class="bg-gray-50 dark:bg-slate-800 p-4 rounded-lg">
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      Balance Total
                    </div>
                    <div
                      class="text-2xl font-bold text-gray-900 dark:text-white"
                    >
                      $12,450
                    </div>
                  </div>
                  <div class="bg-gray-50 dark:bg-slate-800 p-4 rounded-lg">
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      Gastos
                    </div>
                    <div class="text-2xl font-boldtext-red-600">-$3,240</div>
                  </div>
                  <div class="bg-gray-50 dark:bg-slate-800 p-4 rounded-lg">
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      Ahorros
                    </div>
                    <div class="text-2xl font-bold text-green-600">+$5,200</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section id="features" class="py-20 bg-white dark:bg-slate-900">
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
              Características principales
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
              Todo lo que necesitas para gestionar tu dinero
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-8">
            <div
              class="p-6 rounded-2xl border border-gray-200 dark:border-slate-700 hover:shadow-xl transition"
            >
              <div
                class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-xl flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-indigo-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                  >
                  </path>
                </svg>
              </div>
              <h3
                class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
              >
                Control de Gastos
              </h3>
              <p class="text-gray-600 dark:text-gray-300">
                Registra y categoriza todos tus gastos automáticamente.
              </p>
            </div>
            <div
              class="p-6 rounded-2xl border border-gray-200 dark:border-slate-700 hover:shadow-xl transition"
            >
              <div
                class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-xl flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-green-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  >
                  </path>
                </svg>
              </div>
              <h3
                class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
              >
                Ahorros Inteligentes
              </h3>
              <p class="text-gray-600 dark:text-gray-300">
                Crea metas de ahorro y alcanza tus objetivos financieros.
              </p>
            </div>
            <div
              class="p-6 rounded-2xl border border-gray-200 dark:border-slate-700 hover:shadow-xl transition"
            >
              <div
                class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-xl flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-purple-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                  >
                  </path>
                </svg>
              </div>
              <h3
                class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
              >
                Recordatorios
              </h3>
              <p class="text-gray-600 dark:text-gray-300">
                No olvides pagos importantes con notificaciones inteligentes.
              </p>
            </div>
          </div>
        </div>
      </section>
      <!-- Footer -->
      <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid md:grid-cols-4 gap-8">
            <div>
              <h3 class="text-lg font-semibold mb-4">LaricoWallet</h3>
              <p class="text-gray-400">Tu billetera financiera inteligente</p>
            </div>
            <div>
              <h4 class="font-semibold mb-4">Producto</h4>
              <ul class="space-y-2 text-gray-400">
                <li>
                  <a href="#" class="hover:text-white">Características</a>
                </li>
                <li><a href="#" class="hover:text-white">Precios</a></li>
                <li><a href="#" class="hover:text-white">Demo</a></li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold mb-4">Empresa</h4>
              <ul class="space-y-2 text-gray-400">
                <li><a href="#" class="hover:text-white">Acerca de</a></li>
                <li><a href="#" class="hover:text-white">Blog</a></li>
                <li><a href="#" class="hover:text-white">Contacto</a></li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold mb-4">Legal</h4>
              <ul class="space-y-2 text-gray-400">
                <li><a href="#" class="hover:text-white">Privacidad</a></li>
                <li><a href="#" class="hover:text-white">Términos</a></li>
              </ul>
            </div>
          </div>
          <div class="mt-8 pt-8 border-t border-gray-800 text-center">
            <p>&copy; 2024 LaricoWallet. Todos los derechos reservados.</p>
          </div>
        </div>
      </footer>
    </div>

    <script>
      // Dark Mode Toggle
      const themeToggle = document.getElementById("theme-toggle");

      // Load dark mode preference
      if (localStorage.getItem("darkMode") === "true") {
        document.body.classList.add("dark");
      }

      // Toggle dark mode
      if (themeToggle) {
        themeToggle.addEventListener("click", () => {
          document.body.classList.toggle("dark");
          localStorage.setItem(
            "darkMode",
            document.body.classList.contains("dark").toString(),
          );
        });
      }
    </script>
  </body>
</html>
