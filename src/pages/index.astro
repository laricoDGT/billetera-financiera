        document.body.classList.toggle("dark");
        localStorage.setItem(
          "darkMode",
          document.body.classList.contains("dark")
        );
      };

      // Load Dark Mode Preference
      if (localStorage.getItem("darkMode") === "true") {
        document.body.classList.add("dark");
      }

      // Page Navigation
      window.showPage = function (pageId) {
        // Hide all pages
        const pages = [
          "landing-page",
          "login-page",
          "register-page",
          "forgot-password-page",
          "reset-password-page",
          "email-verification-page",
          "dashboard-page",
          "accounts-page",
          "transactions-page",
          "categories-page",
          "reminders-page",
          "notifications-page",
          "profile-page",
          "admin-page",
        ];

        pages.forEach((page) => {
          const element = document.getElementById(page);
          if (element) {
            element.classList.add("hidden");
          }
        });

        // Show selected page
        const targetPage = document.getElementById(pageId);
        if (targetPage) {
          targetPage.classList.remove("hidden");
          window.scrollTo(0, 0);

          // Dispatch event for components to react
          window.dispatchEvent(
            new CustomEvent("pageChanged", { detail: { pageId } })
          );
        }
      };

      // Sidebar Toggle (Mobile)
      window.toggleSidebar = function () {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("hidden");
      };

      // Create Account
      window.createAccount = async function () {
        const name = document.getElementById("account-name").value;
        const type = document.getElementById("account-type").value;
        const balance = document.getElementById("account-balance").value;

        const btn = document.getElementById("btn-create-account");
        const btnText = document.getElementById("btn-text-create-account");
        const btnSpinner = document.getElementById(
          "btn-spinner-create-account"
        );

        // Show loading
        if (btn && btnText && btnSpinner) {
          btn.disabled = true;
          btnText.textContent = "Creando...";
          btnSpinner.classList.remove("hidden");
        }

        try {
          // Get session token if available to ensure auth works
          let headers = {
            "Content-Type": "application/json",
          };

          // Try to get token from authClient
          const sessionData = await authClient.getSession();
          if (sessionData?.data?.session?.token) {
            // Add Bearer token as fallback/primary auth method
            headers["Authorization"] =
              `Bearer ${sessionData.data.session.token}`;
          }

          const response = await fetch("/api/accounts", {
            method: "POST",
            headers: headers,
            credentials: "include", // Ensure cookies are sent too
            body: JSON.stringify({ name, type, balance }),
          });

          if (response.ok) {
            showToast("Cuenta creada exitosamente", "success");
            closeModal();
            // Reload page to show new account and stay on accounts page
            setTimeout(() => {
              window.location.href = "/?page=accounts";
            }, 1000);
          } else {
            const errorData = await response
              .json()
              .catch(() => ({ error: "Error desconocido" }));
            console.error("Error creating account:", errorData);
            showToast(
              `Error: ${errorData.error || "Error al crear la cuenta"}`,
              "error"
            );
            // Reset button
            if (btn && btnText && btnSpinner) {
              btn.disabled = false;
              btnText.textContent = "Crear";
              btnSpinner.classList.add("hidden");
            }
          }
        } catch (error) {
          console.error(error);
          showToast("Error de conexi√≥n", "error");
          // Reset button
          if (btn && btnText && btnSpinner) {
            btn.disabled = false;
            btnText.textContent = "Crear";
            btnSpinner.classList.add("hidden");
          }
        }
