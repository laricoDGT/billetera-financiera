---
import Layout from "../layouts/Layout.astro";
import { auth } from "../lib/auth";
import { query } from "../lib/db";
import Modal from "../components/Modal.astro";

const session = await auth.api.getSession({
    headers: Astro.request.headers,
});

if (!session) {
    return Astro.redirect("/");
}

let invoices = [];

if (session) {
    const result = await query(
        `SELECT * FROM financial_invoices WHERE user_id = $1 ORDER BY issue_date DESC`,
        [session.user.id],
    );
    invoices = result.rows;
}

// Helper to format currency
const formatCurrency = (amount: number | string) => {
    return new Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
    }).format(Number(amount));
};

const getStatusColor = (status: string) => {
    switch (status) {
        case "paid":
            return "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400";
        case "pending":
            return "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400";
        case "overdue":
            return "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400";
        default:
            return "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300";
    }
};

const getStatusLabel = (status: string) => {
    switch (status) {
        case "paid":
            return "Pagado";
        case "pending":
            return "Pendiente";
        case "overdue":
            return "Vencido";
        default:
            return status;
    }
};
---

<Layout title="Invoices">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
                    Invoices
                </h1>
                <p class="text-gray-600 dark:text-gray-300 mt-1">
                    Gestiona tus facturas y cobros
                </p>
            </div>
            <button
                onclick="openAddInvoiceModal()"
                class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center space-x-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 4v16m8-8H4"></path>
                </svg>
                <span>Nueva Invoice</span>
            </button>
        </div>

        <!-- Empty State -->
        {
            invoices.length === 0 ? (
                <div class="text-center py-12 bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-200 dark:border-slate-700">
                    <div class="w-24 h-24 bg-indigo-100 dark:bg-indigo-900/20 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg
                            class="w-12 h-12 text-indigo-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                            />
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                        No tienes invoices registradas
                    </h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6">
                        Crea y gestiona tus facturas de manera sencilla.
                    </p>
                    <button
                        onclick="openAddInvoiceModal()"
                        class="text-indigo-600 font-medium hover:text-indigo-700"
                    >
                        Crear primera invoice &rarr;
                    </button>
                </div>
            ) : (
                <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-200 dark:border-slate-700 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left text-sm text-gray-500 dark:text-gray-400">
                            <thead class="bg-gray-50 dark:bg-slate-700/50 text-xs uppercase text-gray-700 dark:text-gray-300">
                                <tr>
                                    <th class="px-6 py-4 font-semibold">
                                        N° Invoice
                                    </th>
                                    <th class="px-6 py-4 font-semibold">
                                        Cliente
                                    </th>
                                    <th class="px-6 py-4 font-semibold">
                                        Fecha Emisión
                                    </th>
                                    <th class="px-6 py-4 font-semibold">
                                        Vencimiento
                                    </th>
                                    <th class="px-6 py-4 font-semibold">
                                        Estado
                                    </th>
                                    <th class="px-6 py-4 font-semibold text-right">
                                        Monto
                                    </th>
                                    <th class="px-6 py-4 font-semibold text-right">
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-slate-700">
                                {invoices.map((invoice: any) => (
                                    <tr class="hover:bg-gray-50 dark:hover:bg-slate-700/50 transition">
                                        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                            {invoice.invoice_number || "-"}
                                        </td>
                                        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                            {invoice.client_name}
                                        </td>
                                        <td class="px-6 py-4">
                                            {new Date(
                                                invoice.issue_date,
                                            ).toLocaleDateString()}
                                        </td>
                                        <td class="px-6 py-4">
                                            {invoice.due_date
                                                ? new Date(
                                                      invoice.due_date,
                                                  ).toLocaleDateString()
                                                : "-"}
                                        </td>
                                        <td class="px-6 py-4">
                                            <span
                                                class={`px-2.5 py-0.5 rounded-full text-xs font-medium ${getStatusColor(invoice.status)}`}
                                            >
                                                {getStatusLabel(invoice.status)}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-right font-medium text-gray-900 dark:text-white">
                                            {formatCurrency(invoice.amount)}
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <div class="flex justify-end space-x-2">
                                                <button
                                                    onclick={`viewInvoice('${invoice.id}', '${invoice.invoice_number || ""}', '${invoice.client_name}', '${invoice.amount}', '${invoice.status}', '${new Date(invoice.issue_date).toISOString()}', '${invoice.due_date ? new Date(invoice.due_date).toISOString() : ""}', '${JSON.stringify(invoice.items || []).replace(/'/g, "\\'")}', '${invoice.notes || ""}', '${invoice.tax_rate || 0}')`}
                                                    class="text-indigo-600 hover:text-indigo-900 dark:hover:text-indigo-400 font-medium"
                                                    title="Ver Detalle"
                                                >
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                                        />
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                                        />
                                                    </svg>
                                                </button>
                                                <button
                                                    onclick={`openEditInvoiceModal('${invoice.id}', '${invoice.invoice_number || ""}', '${invoice.client_name}', '${invoice.amount}', '${invoice.status}', '${new Date(invoice.issue_date).toISOString()}', '${invoice.due_date ? new Date(invoice.due_date).toISOString() : ""}', '${JSON.stringify(invoice.items || []).replace(/'/g, "\\'")}', '${invoice.notes || ""}', '${invoice.tax_rate || 0}')`}
                                                    class="text-blue-600 hover:text-blue-900 dark:hover:text-blue-400 font-medium"
                                                    title="Editar"
                                                >
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                                                        />
                                                    </svg>
                                                </button>
                                                <button
                                                    onclick={`deleteInvoice('${invoice.id}')`}
                                                    class="text-red-600 hover:text-red-900 dark:hover:text-red-400 font-medium"
                                                    title="Eliminar"
                                                >
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                                        />
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                </div>
            )
        }
    </div>

    <Modal />

    <!-- Templates -->
    <template id="add-invoice-template">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                Nueva Invoice
            </h3>
            <button
                onclick="closeModal()"
                class="text-gray-400 hover:text-gray-600"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form
            class="space-y-4"
            onsubmit="event.preventDefault(); createInvoice()"
        >
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >N° Invoice</label
                    >
                    <input
                        type="text"
                        id="invoice-number"
                        placeholder="INV-001"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    />
                </div>
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Cliente</label
                    >
                    <input
                        type="text"
                        id="invoice-client"
                        placeholder="Nombre del Cliente"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Fecha de Emisión</label
                    >
                    <input
                        type="date"
                        id="invoice-issue-date"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Fecha de Vencimiento</label
                    >
                    <input
                        type="date"
                        id="invoice-due-date"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    />
                </div>
            </div>

            <!-- Items Section -->
            <div class="border-t border-gray-200 dark:border-slate-700 pt-4">
                <div class="flex justify-between items-center mb-2">
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        >Items</label
                    >
                    <button
                        type="button"
                        onclick="addInvoiceItem('invoice-items-container')"
                        class="text-sm text-indigo-600 hover:text-indigo-700 font-medium"
                        >+ Agregar Item</button
                    >
                </div>
                <div id="invoice-items-container" class="space-y-2">
                    <!-- Items will be added here -->
                </div>
            </div>

            <div
                class="grid grid-cols-2 gap-4 border-t border-gray-200 dark:border-slate-700 pt-4"
            >
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Notas</label
                    >
                    <textarea
                        id="invoice-notes"
                        rows="3"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    ></textarea>
                </div>
                <div class="space-y-2">
                    <div class="flex justify-between items-center">
                        <label
                            class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                            >Impuesto (%)</label
                        >
                        <input
                            type="number"
                            id="invoice-tax-rate"
                            value="0"
                            min="0"
                            step="0.1"
                            onchange="calculateInvoiceTotal()"
                            class="w-20 px-2 py-1 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-right"
                        />
                    </div>
                    <div
                        class="flex justify-between items-center text-lg font-bold text-gray-900 dark:text-white"
                    >
                        <span>Total:</span>
                        <span id="invoice-total-display">$0.00</span>
                        <input
                            type="hidden"
                            id="invoice-total-amount"
                            value="0"
                        />
                    </div>
                </div>
            </div>

            <div class="flex gap-3 pt-4">
                <button
                    type="submit"
                    id="btn-create-invoice"
                    class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition font-medium flex justify-center items-center"
                >
                    <span id="btn-text-create-invoice">Guardar</span>
                    <svg
                        id="btn-spinner-create-invoice"
                        class="hidden animate-spin ml-2 h-5 w-5 text-white"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"></circle>
                        <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        ></path>
                    </svg>
                </button>
                <button
                    type="button"
                    onclick="closeModal()"
                    class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
                    >Cancelar</button
                >
            </div>
        </form>
    </template>

    <template id="edit-invoice-template">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                Editar Invoice
            </h3>
            <button
                onclick="closeModal()"
                class="text-gray-400 hover:text-gray-600"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form
            class="space-y-4"
            onsubmit="event.preventDefault(); updateInvoice()"
        >
            <input type="hidden" id="edit-invoice-id" />
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >N° Invoice</label
                    >
                    <input
                        type="text"
                        id="edit-invoice-number"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    />
                </div>
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Cliente</label
                    >
                    <input
                        type="text"
                        id="edit-invoice-client"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Fecha de Emisión</label
                    >
                    <input
                        type="date"
                        id="edit-invoice-issue-date"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                        required
                    />
                </div>
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Fecha de Vencimiento</label
                    >
                    <input
                        type="date"
                        id="edit-invoice-due-date"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    />
                </div>
            </div>
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Estado</label
                >
                <select
                    id="edit-invoice-status"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                >
                    <option value="pending">Pendiente</option>
                    <option value="paid">Pagado</option>
                    <option value="overdue">Vencido</option>
                </select>
            </div>

            <!-- Items Section -->
            <div class="border-t border-gray-200 dark:border-slate-700 pt-4">
                <div class="flex justify-between items-center mb-2">
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        >Items</label
                    >
                    <button
                        type="button"
                        onclick="addInvoiceItem('edit-invoice-items-container')"
                        class="text-sm text-indigo-600 hover:text-indigo-700 font-medium"
                        >+ Agregar Item</button
                    >
                </div>
                <div id="edit-invoice-items-container" class="space-y-2">
                    <!-- Items will be added here -->
                </div>
            </div>

            <div
                class="grid grid-cols-2 gap-4 border-t border-gray-200 dark:border-slate-700 pt-4"
            >
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                        >Notas</label
                    >
                    <textarea
                        id="edit-invoice-notes"
                        rows="3"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    ></textarea>
                </div>
                <div class="space-y-2">
                    <div class="flex justify-between items-center">
                        <label
                            class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                            >Impuesto (%)</label
                        >
                        <input
                            type="number"
                            id="edit-invoice-tax-rate"
                            min="0"
                            step="0.1"
                            onchange="calculateInvoiceTotal('edit-')"
                            class="w-20 px-2 py-1 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-right"
                        />
                    </div>
                    <div
                        class="flex justify-between items-center text-lg font-bold text-gray-900 dark:text-white"
                    >
                        <span>Total:</span>
                        <span id="edit-invoice-total-display">$0.00</span>
                        <input type="hidden" id="edit-invoice-total-amount" />
                    </div>
                </div>
            </div>

            <div class="flex gap-3 pt-4">
                <button
                    type="submit"
                    id="btn-update-invoice"
                    class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition font-medium flex justify-center items-center"
                >
                    <span id="btn-text-update-invoice">Actualizar</span>
                    <svg
                        id="btn-spinner-update-invoice"
                        class="hidden animate-spin ml-2 h-5 w-5 text-white"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"></circle>
                        <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        ></path>
                    </svg>
                </button>
                <button
                    type="button"
                    onclick="closeModal()"
                    class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
                    >Cancelar</button
                >
            </div>
        </form>
    </template>

    <template id="view-invoice-template">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                Detalle Invoice
            </h3>
            <button
                onclick="closeModal()"
                class="text-gray-400 hover:text-gray-600"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <div class="space-y-6">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
