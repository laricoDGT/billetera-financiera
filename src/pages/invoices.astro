        window.generatePDF = function (
            id,
            invoice_number,
            client_name,
            amount,
            status,
            issue_date,
            due_date,
            itemsStr,
            notes,
            tax_rate,
        ) {
            if (!currentSettings) {
                alert(
                    "Por favor configura tu perfil de facturación primero en Configuración.",
                );
                return;
            }

            const items = JSON.parse(itemsStr.replace(/\\'/g, "'"));
            const doc = new jsPDF();

            // Colors
            const blueColor = [30, 64, 175]; // Indigo 800
            const grayColor = [107, 114, 128]; // Gray 500
            const lightGrayColor = [243, 244, 246]; // Gray 100

            // Header Line
            doc.setDrawColor(blueColor[0], blueColor[1], blueColor[2]);
            doc.setLineWidth(1.5);
            doc.line(20, 20, 190, 20);

            // Sender Name (Larger Blue)
            doc.setFontSize(32);
            doc.setTextColor(blueColor[0], blueColor[1], blueColor[2]);
            doc.setFont("helvetica", "bold");
            const senderName =
                `${currentSettings.first_name || ""} ${currentSettings.last_name || ""}`.toUpperCase();
            doc.text(senderName, 20, 35);

            // Sender Details
            doc.setFontSize(11);
            doc.setTextColor(80, 80, 80);
            doc.setFont("helvetica", "normal");
            let yPos = 45;
            if (currentSettings.address) {
                doc.text(currentSettings.address, 20, yPos);
                yPos += 5;
            }
            if (currentSettings.phone) {
                doc.text(`C: ${currentSettings.phone}`, 20, yPos);
                yPos += 5;
            }
            if (currentSettings.email) {
                doc.text(`E: ${currentSettings.email}`, 20, yPos);
                yPos += 15;
            } else {
                yPos += 10;
            }

            // Invoice Title
            doc.setFontSize(28);
            doc.setTextColor(0, 0, 0);
            doc.setFont("helvetica", "bold");
            doc.text("Invoice", 20, yPos);
            yPos += 15;

            // Info Columns
            const col1X = 20;
            const col2X = 120;

            // Submitted on
            doc.setFontSize(12);
            doc.setFont("helvetica", "normal");
            doc.text("Submitted on:", col1X, yPos);
            doc.text("Invoice #", col2X, yPos);
            yPos += 6;

            doc.setFont("helvetica", "bold");
            doc.text(
                new Date(issue_date).toLocaleDateString("en-US"),
                col1X,
                yPos,
            );
            doc.text(invoice_number || "-", col2X, yPos);
            yPos += 10;

            // Invoice for / Due date
            doc.setFontSize(12);
            doc.setFont("helvetica", "normal");
            doc.text("Invoice for:", col1X, yPos);
            doc.text("Due date", col2X, yPos);
            yPos += 6;

            doc.setFont("helvetica", "bold");
            doc.text(client_name, col1X, yPos);
            doc.text(
                due_date ? new Date(due_date).toLocaleDateString("en-US") : "-",
                col2X,
                yPos,
            );
            yPos += 6;

            // Invoice Para Address (from default settings)
            doc.setFont("helvetica", "normal");
            doc.setFontSize(12);
            if (currentSettings.default_invoice_for) {
                const splitAddress = doc.splitTextToSize(
                    currentSettings.default_invoice_for,
                    80,
                );
                doc.text(splitAddress, col1X, yPos);
                yPos += splitAddress.length * 6 + 10;
            } else {
                yPos += 10;
            }

            // Items Table
            const tableData = items.map((item) => [
                item.description,
                item.quantity,
                new Intl.NumberFormat("en-US", {
                    style: "currency",
                    currency: "USD",
                }).format(item.price),
                new Intl.NumberFormat("en-US", {
                    style: "currency",
                    currency: "USD",
                }).format(item.quantity * item.price),
            ]);

            autoTable(doc, {
                startY: yPos,
                head: [["Description", "Qty", "Unit price", "Total price"]],
                body: tableData,
                theme: "plain",
                // MODIFICACIÓN 1: Agregamos margen derecho para que no se desborde
                margin: { left: 20, right: 20 },
                headStyles: {
                    fillColor: lightGrayColor,
                    textColor: blueColor,
                    fontStyle: "bold",
                    halign: "left", // Alineación general de cabeceras
                    fontSize: 11,
                },
                styles: {
                    fontSize: 11,
                    cellPadding: 4,
                },
                columnStyles: {
                    // MODIFICACIÓN 2: Description en 'auto' para que se adapte al ancho disponible
                    0: { cellWidth: "auto", halign: "left" },
                    1: { cellWidth: 20, halign: "right" },
                    2: { cellWidth: 30, halign: "right" },
                    3: { cellWidth: 30, halign: "right" },
                },
                // Opcional: Esto asegura que las cabeceras numéricas se alineen a la derecha con sus datos
                didParseCell: function (data) {
                    if (data.section === "head" && data.column.index > 0) {
                        data.cell.styles.halign = "right";
                    }
                },
            });

            // Totals
            let finalY = (doc as any).lastAutoTable.finalY + 10;

            // Calculate totals
            const subtotal = items.reduce(
                (sum, item) => sum + item.quantity * item.price,
                0,
            );
            const taxAmount = subtotal * (tax_rate / 100);
            const total = subtotal + taxAmount;

            const rightColX = 140;
            const valueColX = 190;

            doc.setFontSize(10);
            doc.setFont("helvetica", "bold");
            doc.text("Subtotal:", rightColX, finalY);
            doc.setFont("helvetica", "normal");
            doc.text(
                new Intl.NumberFormat("en-US", {
                    style: "currency",
                    currency: "USD",
                }).format(subtotal),
                valueColX,
                finalY,
                { align: "right" },
            );
            finalY += 7;

            doc.setFont("helvetica", "bold");
            doc.text("Adjustments:", rightColX, finalY);
            doc.setFont("helvetica", "normal");
            doc.text(
                new Intl.NumberFormat("en-US", {
                    style: "currency",
                    currency: "USD",
                }).format(taxAmount),
                valueColX,
                finalY,
                { align: "right" },
            );
            finalY += 10;

            doc.setFontSize(14);
            doc.setFont("helvetica", "bold");
            doc.text("Total:", rightColX, finalY);
            doc.setTextColor(blueColor[0], blueColor[1], blueColor[2]);
            doc.text(
                new Intl.NumberFormat("en-US", {
                    style: "currency",
                    currency: "USD",
                }).format(total),
                valueColX,
                finalY,
                { align: "right" },
            );

            // Save PDF
            const filename = invoice_number
                ? `${invoice_number}.pdf`
                : "invoice.pdf";
            doc.save(filename);
        };
    </script>
    <Toast />
