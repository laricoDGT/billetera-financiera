            toast.className = `${colorClass} text-white px-6 py-3 rounded-lg shadow-lg transform transition-all duration-300 translate-y-10 opacity-0 flex items-center`;
            toast.innerHTML = `
        <span class="font-medium">${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-4 hover:text-gray-200">✕</button>
    `;

            container.appendChild(toast);

            requestAnimationFrame(() => {
                toast.classList.remove("translate-y-10", "opacity-0");
            });

