        window.deleteInvoice = async function (id) {
            console.log("Attempting to delete invoice with ID:", id);
            if (!id || id === "undefined") {
                console.error("Invalid invoice ID:", id);
                showToast("Error: ID de invoice inválido", "error");
                return;
            }

            if (!confirm("¿Estás seguro de eliminar esta invoice?")) return;

            try {
                showToast("Eliminando invoice...", "info");
                const response = await fetch(`/api/invoices?id=${id}`, {
                    method: "DELETE",
                });

                console.log("Delete response status:", response.status);

                if (response.ok) {
                    showToast("Invoice eliminada correctamente", "success");
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    const errorData = await response.json();
                    console.error("Delete failed:", errorData);
                    showToast(
                        `Error al eliminar: ${errorData.error || "Desconocido"}`,
                        "error",
                    );
                }
            } catch (error) {
                console.error("Error in deleteInvoice:", error);
                showToast("Error de conexión al eliminar", "error");
