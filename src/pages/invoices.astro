            <div id="view-invoice-notes-container" class="hidden">
                <p class="text-sm text-gray-500 dark:text-gray-400">Notas:</p>
                <p
                    class="text-sm text-gray-700 dark:text-gray-300 italic"
                    id="view-invoice-notes"
                >
                </p>
            </div>

            <div class="pt-4">
                <button
                    type="button"
                    onclick="closeModal()"
                    class="w-full bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
                    >Cerrar</button
                >
            </div>
        </div>
    </template>

    <script>
        import { authClient } from "../lib/auth-client";

        window.openAddInvoiceModal = function () {
            const template = document.getElementById("add-invoice-template");
            const content = document.getElementById("modal-content");
            const overlay = document.getElementById("modal-overlay");

            content.innerHTML = template.innerHTML;
            overlay.classList.remove("hidden");

            setTimeout(() => addInvoiceItem("invoice-items-container"), 100);
        };

        window.openEditInvoiceModal = function (
            id,
            invoice_number,
            client_name,
            amount,
            status,
            issue_date,
            due_date,
            itemsStr,
            notes,
            tax_rate,
        ) {
            const invoice = {
                id,
                invoice_number,
                client_name,
                amount,
                status,
                issue_date,
                due_date,
                items:
                    typeof itemsStr === "string"
                        ? JSON.parse(itemsStr || "[]")
                        : itemsStr,
                notes,
                tax_rate,
            };

            const template = document.getElementById("edit-invoice-template");
            const content = document.getElementById("modal-content");
            const overlay = document.getElementById("modal-overlay");

            content.innerHTML = template.innerHTML;
            overlay.classList.remove("hidden");

            setTimeout(() => {
                document.getElementById("edit-invoice-id").value = invoice.id;
                document.getElementById("edit-invoice-number").value =
                    invoice.invoice_number || "";
                document.getElementById("edit-invoice-client").value =
                    invoice.client_name;
                document.getElementById("edit-invoice-issue-date").value =
                    invoice.issue_date.split("T")[0];
                if (
                    invoice.due_date &&
                    invoice.due_date !== "null" &&
                    invoice.due_date !== "undefined"
                ) {
                    document.getElementById("edit-invoice-due-date").value =
                        invoice.due_date.split("T")[0];
                }
                document.getElementById("edit-invoice-status").value =
                    invoice.status;
                document.getElementById("edit-invoice-notes").value =
                    invoice.notes &&
                    invoice.notes !== "null" &&
                    invoice.notes !== "undefined"
                        ? invoice.notes
                        : "";
                document.getElementById("edit-invoice-tax-rate").value =
                    invoice.tax_rate || 0;

                // Populate items
                const container = document.getElementById(
                    "edit-invoice-items-container",
                );
                container.innerHTML = ""; // Clear existing

                const items = Array.isArray(invoice.items) ? invoice.items : [];
                if (items.length > 0) {
                    items.forEach((item) => {
                        window.addInvoiceItem("edit-invoice-items-container");
                        // Get the last added row
                        const rows =
                            container.getElementsByClassName(
                                "invoice-item-row",
                            );
                        const lastRow = rows[rows.length - 1];

                        lastRow.querySelector(".item-description").value =
                            item.description;
                        lastRow.querySelector(".item-quantity").value =
                            item.quantity;
                        lastRow.querySelector(".item-price").value =
                            item.unit_price;
                    });
                } else {
                    window.addInvoiceItem("edit-invoice-items-container");
                }

                window.calculateInvoiceTotal("edit-");
            }, 100);
        };

        window.viewInvoice = function (
            id,
            invoice_number,
            client_name,
            amount,
            status,
            issue_date,
            due_date,
            itemsStr,
            notes,
            tax_rate,
        ) {
            const invoice = {
                id,
                invoice_number,
                client_name,
                amount,
                status,
                issue_date,
                due_date,
                items:
                    typeof itemsStr === "string"
                        ? JSON.parse(itemsStr || "[]")
                        : itemsStr,
                notes,
                tax_rate,
            };

            const template = document.getElementById("view-invoice-template");
            const content = document.getElementById("modal-content");
            const overlay = document.getElementById("modal-overlay");

            content.innerHTML = template.innerHTML;
            overlay.classList.remove("hidden");

            setTimeout(() => {
                document.getElementById("view-invoice-client").textContent =
                    invoice.client_name;
                document.getElementById("view-invoice-number").textContent =
                    invoice.invoice_number || "N/A";
                document.getElementById("view-invoice-issue-date").textContent =
                    new Date(invoice.issue_date).toLocaleDateString();
                document.getElementById("view-invoice-due-date").textContent =
                    invoice.due_date
                        ? new Date(invoice.due_date).toLocaleDateString()
                        : "-";

                const statusEl = document.getElementById("view-invoice-status");
                const statusMap = {
                    pending: {
                        text: "Pendiente",
                        class: "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
                    },
                    paid: {
                        text: "Pagado",
                        class: "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                    },
                    overdue: {
                        text: "Vencido",
                        class: "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                    },
                };
                const statusObj = statusMap[invoice.status] || {
                    text: invoice.status,
                    class: "bg-gray-100 text-gray-800",
                };
                statusEl.textContent = statusObj.text;
                statusEl.className = `px-2 py-0.5 rounded-full text-xs font-medium ${statusObj.class}`;

                // Render Items
                const itemsContainer =
                    document.getElementById("view-invoice-items");
                itemsContainer.innerHTML = "";
                let subtotal = 0;

                const items = Array.isArray(invoice.items) ? invoice.items : [];
                items.forEach((item) => {
                    const row = document.createElement("div");
                    row.className =
                        "flex justify-between py-1 border-b border-gray-100 dark:border-slate-700 last:border-0";
                    row.innerHTML = `
                    <div class="flex-1">
                        <span class="font-medium text-gray-900 dark:text-white">${item.description}</span>
                        <div class="text-xs text-gray-500 dark:text-gray-400">${item.quantity} x $${parseFloat(item.unit_price).toFixed(2)}</div>
                    </div>
                    <span class="font-medium text-gray-900 dark:text-white">$${parseFloat(item.total).toFixed(2)}</span>
                `;
                    itemsContainer.appendChild(row);
                    subtotal += parseFloat(item.total);
                });

                const taxRateVal = parseFloat(invoice.tax_rate) || 0;
                const taxAmount = subtotal * (taxRateVal / 100);
                const total = parseFloat(invoice.amount);

                document.getElementById("view-invoice-subtotal").textContent =
                    `$${subtotal.toFixed(2)}`;
                document.getElementById("view-invoice-tax-rate").textContent =
                    taxRateVal;
                document.getElementById("view-invoice-tax-amount").textContent =
                    `$${taxAmount.toFixed(2)}`;
                document.getElementById("view-invoice-total").textContent =
                    `$${total.toFixed(2)}`;

                const notesContainer = document.getElementById(
                    "view-invoice-notes-container",
                );
                const notesEl = document.getElementById("view-invoice-notes");
                if (
                    invoice.notes &&
                    invoice.notes !== "null" &&
                    invoice.notes !== "undefined"
                ) {
                    notesEl.textContent = invoice.notes;
                    notesContainer.classList.remove("hidden");
                } else {
                    notesContainer.classList.add("hidden");
                }
            }, 100);
        };

        window.closeModal = function () {
            const overlay = document.getElementById("modal-overlay");
            overlay.classList.add("hidden");
        };

        // Invoice Item Management
        window.addInvoiceItem = function (containerId) {
            const container = document.getElementById(containerId);
            const itemRow = document.createElement("div");
            itemRow.className =
                "grid grid-cols-12 gap-2 items-start invoice-item-row";

            const prefix = containerId.includes("edit") ? "edit-" : "";

            itemRow.innerHTML = `
            <div class="col-span-5">
                <input type="text" placeholder="Descripción" class="item-description w-full px-3 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm" required>
            </div>
            <div class="col-span-2">
                <input type="number" placeholder="Cant." value="1" min="1" onchange="calculateInvoiceTotal('${prefix}')" class="item-quantity w-full px-3 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm text-right" required>
            </div>
            <div class="col-span-3">
                <input type="number" placeholder="Precio" step="0.01" min="0" onchange="calculateInvoiceTotal('${prefix}')" class="item-price w-full px-3 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm text-right" required>
            </div>
            <div class="col-span-2 flex items-center justify-between">
                <span class="item-total text-sm font-medium text-gray-900 dark:text-white">$0.00</span>
                <button type="button" onclick="removeInvoiceItem(this, '${prefix}')" class="text-red-500 hover:text-red-700">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                </button>
            </div>
        `;
            container.appendChild(itemRow);
        };

        window.removeInvoiceItem = function (button, prefix) {
            button.closest(".invoice-item-row").remove();
            calculateInvoiceTotal(prefix);
        };

        window.calculateInvoiceTotal = function (prefix = "") {
            const container = document.getElementById(
                `${prefix}invoice-items-container`,
            );
            const rows = container.getElementsByClassName("invoice-item-row");
            let subtotal = 0;

            Array.from(rows).forEach((row) => {
                const quantity =
                    parseFloat(row.querySelector(".item-quantity").value) || 0;
                const price =
                    parseFloat(row.querySelector(".item-price").value) || 0;
                const total = quantity * price;

                row.querySelector(".item-total").textContent =
                    `$${total.toFixed(2)}`;
                subtotal += total;
            });

            const taxRate =
                parseFloat(
                    document.getElementById(`${prefix}invoice-tax-rate`).value,
                ) || 0;
            const taxAmount = subtotal * (taxRate / 100);
            const total = subtotal + taxAmount;

            document.getElementById(
                `${prefix}invoice-total-display`,
            ).textContent = `$${total.toFixed(2)}`;
            document.getElementById(`${prefix}invoice-total-amount`).value =
                total.toFixed(2);
        };

        window.createInvoice = async function () {
            const invoiceNumber =
                document.getElementById("invoice-number").value;
            const clientName = document.getElementById("invoice-client").value;
            const issueDate =
                document.getElementById("invoice-issue-date").value;
            const dueDate = document.getElementById("invoice-due-date").value;
            const notes = document.getElementById("invoice-notes").value;
            const taxRate = document.getElementById("invoice-tax-rate").value;
            const totalAmount = document.getElementById(
                "invoice-total-amount",
            ).value;

            // Collect items
            const items = [];
            const itemRows = document.querySelectorAll(
                "#invoice-items-container .invoice-item-row",
            );
            itemRows.forEach((row) => {
                items.push({
                    description: row.querySelector(".item-description").value,
                    quantity: parseFloat(
                        row.querySelector(".item-quantity").value,
                    ),
                    unit_price: parseFloat(
                        row.querySelector(".item-price").value,
                    ),
                    total:
                        parseFloat(row.querySelector(".item-quantity").value) *
                        parseFloat(row.querySelector(".item-price").value),
                });
            });

            if (items.length === 0) {
                alert("Debe agregar al menos un item");
                return;
            }

            const btn = document.getElementById("btn-create-invoice");
            const btnText = document.getElementById("btn-text-create-invoice");
            const btnSpinner = document.getElementById(
                "btn-spinner-create-invoice",
            );

            if (btn && btnText && btnSpinner) {
                btn.disabled = true;
                btnText.textContent = "Guardando...";
                btnSpinner.classList.remove("hidden");
            }

            try {
                let headers = { "Content-Type": "application/json" };
                const sessionData = await authClient.getSession();
                if (sessionData?.data?.session?.token) {
                    headers["Authorization"] =
                        `Bearer ${sessionData.data.session.token}`;
                }

                const response = await fetch("/api/invoices", {
                    method: "POST",
                    headers: headers,
                    credentials: "include",
                    body: JSON.stringify({
                        invoice_number: invoiceNumber,
                        client_name: clientName,
                        amount: totalAmount,
                        issue_date: issueDate,
                        due_date: dueDate,
                        items: items,
                        notes: notes,
                        tax_rate: taxRate,
                    }),
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const errorData = await response.json().catch(() => ({}));
                    alert(errorData.error || "Error al crear la invoice");
                    if (btn && btnText && btnSpinner) {
                        btn.disabled = false;
                        btnText.textContent = "Guardar";
                        btnSpinner.classList.add("hidden");
                    }
                }
            } catch (error) {
                console.error(error);
                alert("Error de conexión");
                if (btn && btnText && btnSpinner) {
                    btn.disabled = false;
                    btnText.textContent = "Guardar";
                    btnSpinner.classList.add("hidden");
                }
            }
        };

