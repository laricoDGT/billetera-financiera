                    parseFloat(row.querySelector(".item-qty").value) || 0;
                const price =
                    parseFloat(row.querySelector(".item-price").value) || 0;
                subtotal += qty * price;
            });

            const taxRate =
                parseFloat(
                    document.getElementById(`${prefix}invoice-tax-rate`).value,
                ) || 0;
            const taxAmount = subtotal * (taxRate / 100);
            const total = subtotal + taxAmount;

            document.getElementById(
                `${prefix}invoice-total-display`,
            ).textContent = new Intl.NumberFormat("en-US", {
                style: "currency",
                currency: "USD",
            }).format(total);
            document.getElementById(`${prefix}invoice-total-amount`).value =
                total;
        };

        window.createInvoice = async function () {
            const btn = document.getElementById("btn-create-invoice");
            const btnText = document.getElementById("btn-text-create-invoice");
            const btnSpinner = document.getElementById(
                "btn-spinner-create-invoice",
            );

            btn.disabled = true;
            btnText.classList.add("hidden");
            btnSpinner.classList.remove("hidden");

            const items = [];
            document
                .querySelectorAll("#invoice-items-container .grid")
                .forEach((row) => {
                    items.push({
                        description: row.querySelector(".item-desc").value,
                        quantity: parseFloat(
                            row.querySelector(".item-qty").value,
                        ),
                        price: parseFloat(
                            row.querySelector(".item-price").value,
                        ),
                    });
                });

            const data = {
                invoice_number: document.getElementById("invoice-number").value,
                client_name: document.getElementById("invoice-client").value,
                issue_date: document.getElementById("invoice-issue-date").value,
                due_date: document.getElementById("invoice-due-date").value,
                items: items,
                notes: document.getElementById("invoice-notes").value,
                tax_rate: parseFloat(
