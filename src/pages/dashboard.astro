import Layout from "../layouts/Layout.astro";
import { auth } from "../lib/auth";
import { query } from "../lib/db";

const session = await auth.api.getSession({
    headers: Astro.request.headers,
});

if (!session) {
    return Astro.redirect("/");
}

// Fetch real data for dashboard
let totalBalance = 0;
let totalIncome = 0;
let totalExpenses = 0;
let totalSavings = 0;
let recentTransactions = [];

if (session) {
    // 1. Calculate Total Balance (Sum of all accounts)
    const accountsResult = await query(
        "SELECT balance FROM financial_accounts WHERE user_id = $1",
        [session.user.id],
    );
    totalBalance = accountsResult.rows.reduce(
        (acc, row) => acc + parseFloat(row.balance),
        0,
    );

    // 2. Calculate Income and Expenses (Current Month)
    const transactionsResult = await query(
        `SELECT type, amount, date FROM financial_transactions 
     WHERE user_id = $1 
     AND date >= date_trunc('month', CURRENT_DATE)`,
        [session.user.id],
    );

    transactionsResult.rows.forEach((t) => {
        if (t.type === "Ingreso") {
            totalIncome += parseFloat(t.amount);
        } else if (t.type === "Gasto") {
            totalExpenses += parseFloat(t.amount);
        }
    });

    totalSavings = totalIncome - totalExpenses;

    // 3. Fetch Recent Transactions (Limit 5)
    const recentTxResult = await query(
        `SELECT t.*, c.icon as category_icon, a.name as account_name 
     FROM financial_transactions t
     LEFT JOIN financial_categories c ON t.category = c.name AND t.user_id = c.user_id
     JOIN financial_accounts a ON t.account_id = a.id
     WHERE t.user_id = $1
     ORDER BY t.date DESC
     LIMIT 5`,
        [session.user.id],
    );
    recentTransactions = recentTxResult.rows;
}

// Helper to format currency
const formatCurrency = (amount: number | string) => {
    return new Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
    }).format(Number(amount));
};

// Helper to format date
const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString("es-ES", {
        day: "numeric",
        month: "short",
    });
};
