---
import Layout from "../layouts/Layout.astro";
import { auth } from "../lib/auth";
import { query } from "../lib/db";
import Modal from "../components/Modal.astro";

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

if (!session) {
  return Astro.redirect("/");
}

let debts = [];

if (session) {
  const result = await query(
    `SELECT * FROM financial_debts WHERE user_id = $1 ORDER BY created_at DESC`,
    [session.user.id]
  );
  debts = result.rows;
}

// Helper to format currency
const formatCurrency = (amount: number | string) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
  }).format(Number(amount));
};

const getTypeLabel = (type: string) => {
  return type === "receivable" ? "Me deben" : "Debo";
};

const getTypeColor = (type: string) => {
  return type === "receivable"
    ? "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400"
    : "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400";
};
---

<Layout title="Deudas y Préstamos">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          Deudas y Préstamos
        </h1>
        <p class="text-gray-600 dark:text-gray-300 mt-1">
          Gestiona tus deudas por pagar y por cobrar
        </p>
      </div>
      <button
        onclick="openAddDebtModal()"
        class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center space-x-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Nueva Deuda</span>
      </button>
    </div>

    <!-- Empty State -->
    {
      debts.length === 0 ? (
        <div class="text-center py-12 bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-200 dark:border-slate-700">
          <div class="w-24 h-24 bg-indigo-100 dark:bg-indigo-900/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg
              class="w-12 h-12 text-indigo-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
            No tienes deudas registradas
          </h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">
            Comienza registrando tus deudas o préstamos para llevar un mejor
            control.
          </p>
          <button
            onclick="openAddDebtModal()"
            class="text-indigo-600 font-medium hover:text-indigo-700"
          >
            Registrar primera deuda &rarr;
          </button>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {debts.map((debt: any) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-200 dark:border-slate-700 relative group hover:shadow-lg transition">
              <!-- Action Menu (Top Right) -->
              <div class="absolute top-4 right-4 flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <button
                  onclick={`openEditDebtModal('${debt.id}', '${debt.type || "payable"}', '${debt.name}', '${debt.total_amount}', '${debt.installment_amount || ""}', '${debt.term || ""}', '${debt.due_date || ""}')`}
                  class="p-1.5 text-gray-500 hover:text-indigo-600 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 rounded-lg transition"
                  title="Editar"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                    />
                  </svg>
                </button>
                <button
                  onclick={`deleteDebt('${debt.id}')`}
                  class="p-1.5 text-gray-500 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition"
                  title="Eliminar"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                    />
                  </svg>
                </button>
              </div>

              <div class="flex justify-between items-start mb-4">
                <div>
                  <div class="flex items-center gap-2 mb-1">
                    <span
                      class={`px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide ${getTypeColor(debt.type || "payable")}`}
                    >
                      {getTypeLabel(debt.type || "payable")}
                    </span>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white truncate pr-8">
                    {debt.name}
                  </h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">
                    Vence:{" "}
                    {debt.due_date
                      ? new Date(debt.due_date).toLocaleDateString()
                      : "Sin fecha"}
                  </p>
                </div>
                <div
                  class={`p-2 rounded-lg ${debt.type === "receivable" ? "bg-green-100 dark:bg-green-900/20" : "bg-red-100 dark:bg-red-900/20"}`}
                >
                  <svg
                    class={`w-6 h-6 ${debt.type === "receivable" ? "text-green-600" : "text-red-600"}`}
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    {debt.type === "receivable" ? (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    ) : (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    )}
                  </svg>
                </div>
              </div>

              <div class="space-y-3">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-500 dark:text-gray-400">Total</span>
                  <span class="font-medium text-gray-900 dark:text-white">
                    {formatCurrency(debt.total_amount)}
                  </span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-500 dark:text-gray-400">Restante</span>
                  <span
                    class={`font-bold ${debt.type === "receivable" ? "text-green-600" : "text-red-600"}`}
                  >
                    {formatCurrency(debt.remaining_amount)}
                  </span>
                </div>

                {debt.term && (
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500 dark:text-gray-400">Plazo</span>
                    <span class="font-medium text-gray-900 dark:text-white">
                      {debt.term} meses
                    </span>
                  </div>
                )}

                {debt.installment_amount && (
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-500 dark:text-gray-400">
                      Cuota Mensual
                    </span>
                    <span class="font-medium text-gray-900 dark:text-white">
                      {formatCurrency(debt.installment_amount)}
                    </span>
                  </div>
                )}

                <div class="w-full bg-gray-200 dark:bg-slate-700 rounded-full h-2.5 mt-2">
                  <div
                    class={`h-2.5 rounded-full ${debt.type === "receivable" ? "bg-green-600" : "bg-red-600"}`}
                    style={`width: ${Math.round(((Number(debt.total_amount) - Number(debt.remaining_amount)) / Number(debt.total_amount)) * 100)}%`}
                  />
                </div>
                <div class="flex justify-between items-center mt-1">
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    {Math.round(
                      ((Number(debt.total_amount) -
                        Number(debt.remaining_amount)) /
                        Number(debt.total_amount)) *
                        100
                    )}
                    % Pagado
                  </p>
                  {Number(debt.remaining_amount) > 0 && (
                    <button
                      onclick={`openPayDebtModal('${debt.id}', '${debt.name}', '${debt.installment_amount || debt.remaining_amount}')`}
                      class="text-xs font-medium text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 flex items-center gap-1"
                    >
                      <svg
                        class="w-3 h-3"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      Registrar Pago
                    </button>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }
  </div>

  <Modal />

  <!-- Templates -->
  <template id="add-debt-template">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
        Nueva Deuda
      </h3>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <form class="space-y-4" onsubmit="event.preventDefault(); createDebt()">
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Tipo</label
        >
        <select
          id="debt-type"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
        >
          <option value="payable">Debo (Por Pagar)</option>
          <option value="receivable">Me Deben (Por Cobrar)</option>
        </select>
      </div>
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Nombre / Descripción</label
        >
        <input
          type="text"
          id="debt-name"
          placeholder="Ej: Préstamo Banco"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          required
        />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Monto Total</label
          >
          <input
            type="number"
            id="debt-amount"
            placeholder="0.00"
            step="0.01"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
            required
          />
        </div>
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Cuota Mensual</label
          >
          <input
            type="number"
            id="debt-installment"
            placeholder="0.00"
            step="0.01"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          />
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Plazo (Meses)</label
          >
          <input
            type="number"
            id="debt-term"
            placeholder="12"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Fecha de Vencimiento</label
          >
          <input
            type="date"
            id="debt-due-date"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          />
        </div>
      </div>
      <div class="flex gap-3 pt-4">
        <button
          type="submit"
          id="btn-create-debt"
          class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition font-medium flex justify-center items-center"
        >
          <span id="btn-text-create-debt">Guardar</span>
          <svg
            id="btn-spinner-create-debt"
            class="hidden animate-spin ml-2 h-5 w-5 text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
        </button>
        <button
          type="button"
          onclick="closeModal()"
          class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
          >Cancelar</button
        >
      </div>
    </form>
  </template>

  <template id="edit-debt-template">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
        Editar Deuda
      </h3>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <form class="space-y-4" onsubmit="event.preventDefault(); updateDebt()">
      <input type="hidden" id="edit-debt-id" />
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Tipo</label
        >
        <select
          id="edit-debt-type"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
        >
          <option value="payable">Debo (Por Pagar)</option>
          <option value="receivable">Me Deben (Por Cobrar)</option>
        </select>
      </div>
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Nombre / Descripción</label
        >
        <input
          type="text"
          id="edit-debt-name"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          required
        />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Monto Total</label
          >
          <input
            type="number"
            id="edit-debt-amount"
            step="0.01"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
            required
          />
        </div>
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Cuota Mensual</label
          >
          <input
            type="number"
            id="edit-debt-installment"
            step="0.01"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          />
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Plazo (Meses)</label
          >
          <input
            type="number"
            id="edit-debt-term"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <div>
          <label
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >Fecha de Vencimiento</label
          >
          <input
            type="date"
            id="edit-debt-due-date"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          />
        </div>
      </div>
      <div class="flex gap-3 pt-4">
        <button
          type="submit"
          id="btn-update-debt"
          class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition font-medium flex justify-center items-center"
        >
          <span id="btn-text-update-debt">Actualizar</span>
          <svg
            id="btn-spinner-update-debt"
            class="hidden animate-spin ml-2 h-5 w-5 text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
        </button>
        <button
          type="button"
          onclick="closeModal()"
          class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
          >Cancelar</button
        >
      </div>
    </form>
  </template>

  <template id="pay-debt-template">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
        Registrar Pago
      </h3>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <form class="space-y-4" onsubmit="event.preventDefault(); payDebt()">
      <input type="hidden" id="pay-debt-id" />
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Deuda</label
        >
        <input
          type="text"
          id="pay-debt-name"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white bg-gray-100 dark:bg-slate-800"
          disabled
        />
      </div>
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Cuenta</label
        >
        <select
          id="pay-debt-account"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          required
        >
          <option value="" disabled selected>Cargando cuentas...</option>
        </select>
      </div>
      <div>
        <label
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
          >Monto a Pagar</label
        >
        <input
          type="number"
          id="pay-debt-amount"
          step="0.01"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
          required
        />
      </div>
      <div class="flex gap-3 pt-4">
        <button
          type="submit"
          id="btn-pay-debt"
          class="flex-1 bg-green-600 text-white py-2 rounded-lg hover:bg-green-700 transition font-medium flex justify-center items-center"
        >
          <span id="btn-text-pay-debt">Registrar Pago</span>
          <svg
            id="btn-spinner-pay-debt"
            class="hidden animate-spin ml-2 h-5 w-5 text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
        </button>
        <button
          type="button"
          onclick="closeModal()"
          class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
          >Cancelar</button
        >
      </div>
    </form>
  </template>

  <script>
    import { authClient } from "../lib/auth-client";

    window.openAddDebtModal = function () {
      const template = document.getElementById("add-debt-template");
      const content = document.getElementById("modal-content");
      const overlay = document.getElementById("modal-overlay");

      content.innerHTML = template.innerHTML;
      overlay.classList.remove("hidden");
    };

    window.openEditDebtModal = function (
      id,
      type,
      name,
      amount,
      installment,
      term,
      dueDate
    ) {
      const template = document.getElementById("edit-debt-template");
      const content = document.getElementById("modal-content");
      const overlay = document.getElementById("modal-overlay");

      content.innerHTML = template.innerHTML;
      overlay.classList.remove("hidden");

      setTimeout(() => {
        document.getElementById("edit-debt-id").value = id;
        document.getElementById("edit-debt-type").value = type;
        document.getElementById("edit-debt-name").value = name;
        document.getElementById("edit-debt-amount").value = amount;
        document.getElementById("edit-debt-installment").value =
          installment || "";
        document.getElementById("edit-debt-term").value = term || "";

        if (dueDate) {
          const date = new Date(dueDate);
          const formattedDate = date.toISOString().split("T")[0];
          document.getElementById("edit-debt-due-date").value = formattedDate;
        }
      }, 0);
    };

    window.openPayDebtModal = function (id, name, currentAmount) {
      const template = document.getElementById("pay-debt-template");
      const content = document.getElementById("modal-content");
      const overlay = document.getElementById("modal-overlay");

      content.innerHTML = template.innerHTML;
      overlay.classList.remove("hidden");

      setTimeout(() => {
        document.getElementById("pay-debt-id").value = id;
        document.getElementById("pay-debt-name").value = name;
        document.getElementById("pay-debt-amount").value = "";
        loadAccountsForSelect();
      }, 0);
    };

    window.closeModal = function () {
      const overlay = document.getElementById("modal-overlay");
      overlay.classList.add("hidden");
    };

    async function loadAccountsForSelect() {
      try {
        let headers = { "Content-Type": "application/json" };
        const sessionData = await authClient.getSession();
        if (sessionData?.data?.session?.token) {
          headers["Authorization"] = `Bearer ${sessionData.data.session.token}`;
        }

        const response = await fetch("/api/accounts", { headers });
        if (response.ok) {
          const accounts = await response.json();
          const select = document.getElementById("pay-debt-account");
          if (select) {
            if (accounts.length === 0) {
              select.innerHTML =
                '<option value="" disabled selected>No tienes cuentas. Crea una primero.</option>';
            } else {
              select.innerHTML =
                '<option value="" disabled selected>Selecciona una cuenta</option>' +
                accounts
                  .map(
                    (acc) =>
                      `<option value="${acc.id}">${acc.name} (${acc.currency} ${acc.balance})</option>`
                  )
                  .join("");
            }
          }
        }
      } catch (e) {
        console.error("Error fetching accounts", e);
      }
    }

    window.createDebt = async function () {
      const type = document.getElementById("debt-type").value;
      const name = document.getElementById("debt-name").value;
      const amount = document.getElementById("debt-amount").value;
      const installment = document.getElementById("debt-installment").value;
      const term = document.getElementById("debt-term").value;
      const dueDate = document.getElementById("debt-due-date").value;

      const btn = document.getElementById("btn-create-debt");
      const btnText = document.getElementById("btn-text-create-debt");
      const btnSpinner = document.getElementById("btn-spinner-create-debt");

      if (btn && btnText && btnSpinner) {
        btn.disabled = true;
        btnText.textContent = "Guardando...";
        btnSpinner.classList.remove("hidden");
      }

      try {
        let headers = { "Content-Type": "application/json" };
        const sessionData = await authClient.getSession();
        if (sessionData?.data?.session?.token) {
          headers["Authorization"] = `Bearer ${sessionData.data.session.token}`;
        }

        const response = await fetch("/api/debts", {
          method: "POST",
          headers: headers,
          body: JSON.stringify({
            type,
            name,
            total_amount: amount,
            installment_amount: installment || null,
            term: term || null,
            due_date: dueDate || null,
          }),
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const errorData = await response.json().catch(() => ({}));
          alert(errorData.error || "Error al crear la deuda");
          if (btn && btnText && btnSpinner) {
            btn.disabled = false;
            btnText.textContent = "Guardar";
            btnSpinner.classList.add("hidden");
          }
        }
      } catch (error) {
        console.error(error);
        alert("Error de conexión");
        if (btn && btnText && btnSpinner) {
          btn.disabled = false;
          btnText.textContent = "Guardar";
          btnSpinner.classList.add("hidden");
        }
      }
    };

    window.updateDebt = async function () {
      const id = document.getElementById("edit-debt-id").value;
      const type = document.getElementById("edit-debt-type").value;
      const name = document.getElementById("edit-debt-name").value;
      const amount = document.getElementById("edit-debt-amount").value;
      const installment = document.getElementById(
        "edit-debt-installment"
      ).value;
      const term = document.getElementById("edit-debt-term").value;
      const dueDate = document.getElementById("edit-debt-due-date").value;

      const btn = document.getElementById("btn-update-debt");
      const btnText = document.getElementById("btn-text-update-debt");
      const btnSpinner = document.getElementById("btn-spinner-update-debt");

      if (btn && btnText && btnSpinner) {
        btn.disabled = true;
        btnText.textContent = "Actualizando...";
        btnSpinner.classList.remove("hidden");
      }

      try {
        let headers = { "Content-Type": "application/json" };
        const sessionData = await authClient.getSession();
        if (sessionData?.data?.session?.token) {
          headers["Authorization"] = `Bearer ${sessionData.data.session.token}`;
        }

        const response = await fetch(`/api/debts?id=${id}`, {
          method: "PUT",
          headers: headers,
          body: JSON.stringify({
            id,
            type,
            name,
            total_amount: amount,
            installment_amount: installment || null,
            term: term || null,
            due_date: dueDate || null,
          }),
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const errorData = await response.json().catch(() => ({}));
          alert(errorData.error || "Error al actualizar la deuda");
          if (btn && btnText && btnSpinner) {
            btn.disabled = false;
            btnText.textContent = "Actualizar";
            btnSpinner.classList.add("hidden");
          }
        }
      } catch (error) {
        console.error(error);
        alert("Error de conexión");
        if (btn && btnText && btnSpinner) {
          btn.disabled = false;
          btnText.textContent = "Actualizar";
          btnSpinner.classList.add("hidden");
        }
      }
    };

    window.deleteDebt = async function (id) {
      if (!confirm("¿Estás seguro de que deseas eliminar esta deuda?")) {
        return;
      }

      try {
        let headers = { "Content-Type": "application/json" };
        const sessionData = await authClient.getSession();
        if (sessionData?.data?.session?.token) {
          headers["Authorization"] = `Bearer ${sessionData.data.session.token}`;
        }

        const response = await fetch(`/api/debts?id=${id}`, {
          method: "DELETE",
          headers: headers,
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const errorData = await response.json().catch(() => ({}));
          alert(errorData.error || "Error al eliminar la deuda");
        }
      } catch (error) {
        console.error(error);
        alert("Error de conexión");
      }
    };

    window.payDebt = async function () {
      const id = document.getElementById("pay-debt-id").value;
      const amount = document.getElementById("pay-debt-amount").value;
      const accountId = document.getElementById("pay-debt-account").value;

      if (!accountId) {
        alert("Por favor selecciona una cuenta");
        return;
      }

      const btn = document.getElementById("btn-pay-debt");
      const btnText = document.getElementById("btn-text-pay-debt");
      const btnSpinner = document.getElementById("btn-spinner-pay-debt");

      if (btn && btnText && btnSpinner) {
        btn.disabled = true;
        btnText.textContent = "Procesando...";
        btnSpinner.classList.remove("hidden");
      }

      try {
        let headers = { "Content-Type": "application/json" };
        const sessionData = await authClient.getSession();
        if (sessionData?.data?.session?.token) {
          headers["Authorization"] = `Bearer ${sessionData.data.session.token}`;
        }

        const response = await fetch(`/api/debts/pay`, {
          method: "POST",
          headers: headers,
          body: JSON.stringify({
            id,
            amount,
            account_id: accountId,
          }),
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const errorData = await response.json().catch(() => ({}));
          alert(errorData.error || "Error al registrar el pago");
          if (btn && btnText && btnSpinner) {
            btn.disabled = false;
            btnText.textContent = "Registrar Pago";
            btnSpinner.classList.add("hidden");
          }
        }
      } catch (error) {
        console.error(error);
        alert("Error de conexión");
        if (btn && btnText && btnSpinner) {
          btn.disabled = false;
          btnText.textContent = "Registrar Pago";
          btnSpinner.classList.add("hidden");
        }
      }
    };
  </script>
</Layout>
