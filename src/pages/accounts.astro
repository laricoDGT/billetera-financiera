---
import Layout from "../layouts/Layout.astro";
import { auth } from "../lib/auth";
import { query } from "../lib/db";
import Modal from "../components/Modal.astro";

const session = await auth.api.getSession({
    headers: Astro.request.headers,
});

if (!session) {
    return Astro.redirect("/");
}

let accounts = [];
let totalBalance = 0;
let totalIncome = 0;
let totalExpenses = 0;

if (session) {
    const result = await query(
        "SELECT * FROM financial_accounts WHERE user_id = $1 ORDER BY created_at DESC",
        [session.user.id],
    );
    accounts = result.rows;
    totalBalance = accounts.reduce(
        (acc, account) => acc + parseFloat(account.balance),
        0,
    );

    // Calculate Income and Expenses for the current month
    const transactionsResult = await query(
        `SELECT type, amount FROM financial_transactions 
     WHERE user_id = $1 
     AND date >= date_trunc('month', CURRENT_DATE)`,
        [session.user.id],
    );

    transactionsResult.rows.forEach((t) => {
        if (t.type === "Ingreso") {
            totalIncome += parseFloat(t.amount);
        } else if (t.type === "Gasto") {
            totalExpenses += parseFloat(t.amount);
        }
    });
}

const totalSavings = totalIncome - totalExpenses;

// Helper to format currency
const formatCurrency = (amount: number | string) => {
    return new Intl.NumberFormat("en-US", {
        style: "currency",
        currency: "USD",
    }).format(Number(amount));
};
---

<Layout title="Cuentas">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
                    Cuentas
                </h1>
                <p class="text-gray-600 dark:text-gray-300 mt-1">
                    Gestiona tus cuentas bancarias y efectivo
                </p>
            </div>
            <button
                onclick="openAddAccountModal()"
                class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center space-x-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 4v16m8-8H4"></path>
                </svg>
                <span>Nueva Cuenta</span>
            </button>
        </div>

        <!-- Total Balance Card -->
        <div
            class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl shadow-xl p-8 text-white mb-8"
        >
            <div class="text-sm opacity-90 mb-2">Balance Total</div>
            <div class="text-5xl font-bold mb-6">
                {formatCurrency(totalBalance)}
            </div>
            <div class="grid grid-cols-3 gap-4 border-t border-white/20 pt-6">
                <div>
                    <div class="text-xs opacity-75 mb-1">Ingresos (Mes)</div>
                    <div class="text-xl font-semibold">
                        {formatCurrency(totalIncome)}
                    </div>
                </div>
                <div>
                    <div class="text-xs opacity-75 mb-1">Gastos (Mes)</div>
                    <div class="text-xl font-semibold">
                        {formatCurrency(totalExpenses)}
                    </div>
                </div>
                <div>
                    <div class="text-xs opacity-75 mb-1">Ahorros (Mes)</div>
                    <div class="text-xl font-semibold">
                        {formatCurrency(totalSavings)}
                    </div>
                </div>
            </div>
        </div>

        <!-- Accounts Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                accounts.map((account) => (
                    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-200 dark:border-slate-700 hover:shadow-lg transition group">
                        <div class="flex items-start justify-between mb-4">
                            <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/20 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                                <svg
                                    class="w-6 h-6 text-indigo-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                                    />
                                </svg>
                            </div>
                            <div class="relative">
                                <button
                                    onclick={`toggleAccountDropdown('dropdown-${account.id}', event)`}
                                    class="dropdown-btn text-gray-400 hover:text-gray-600 p-1 rounded-full hover:bg-gray-100 dark:hover:bg-slate-700 transition"
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                                    </svg>
                                </button>
                                <div
                                    id={`dropdown-${account.id}`}
                                    class="dropdown-menu absolute right-0 mt-1 w-48 bg-white dark:bg-slate-800 rounded-xl shadow-lg py-1 z-10 hidden border border-gray-200 dark:border-slate-700"
                                >
                                    <button
                                        onclick={`openEditAccountModal('${account.id}', '${account.name}', '${account.type}', '${account.balance}')`}
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 flex items-center space-x-2"
                                    >
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                                            />
                                        </svg>
                                        <span>Editar</span>
                                    </button>
                                    <button
                                        onclick={`deleteAccount('${account.id}')`}
                                        class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 flex items-center space-x-2"
                                    >
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                            />
                                        </svg>
                                        <span>Eliminar</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="text-sm text-gray-500 dark:text-gray-400 font-medium">
                                {account.name}
                            </div>
                            <div class="text-2xl font-bold text-gray-900 dark:text-white mt-1">
                                {formatCurrency(account.balance)}
                            </div>
                        </div>
                        <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-100 dark:border-slate-700">
                            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 dark:bg-slate-700 text-gray-600 dark:text-gray-300">
                                {account.type}
                            </span>
                            <span class="text-xs text-gray-500 dark:text-gray-400">
                                {account.currency}
                            </span>
                        </div>
                    </div>
                ))
            }

            {
                accounts.length === 0 && (
                    <div class="col-span-full text-center py-16 bg-white dark:bg-slate-800 rounded-2xl border border-dashed border-gray-300 dark:border-slate-700">
                        <div class="w-16 h-16 bg-gray-100 dark:bg-slate-700 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg
                                class="w-8 h-8 text-gray-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">
                            No tienes cuentas
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">
                            Comienza creando tu primera cuenta financiera
                        </p>
                        <button
                            onclick="openAddAccountModal()"
                            class="text-indigo-600 font-medium hover:text-indigo-700"
                        >
                            Crear cuenta nueva &rarr;
                        </button>
                    </div>
                )
            }
        </div>
    </div>

    <Modal />

    <!-- Templates for Modals -->
    <template id="add-account-template">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                Nueva Cuenta
            </h3>
            <button
                onclick="closeModal()"
                class="text-gray-400 hover:text-gray-600"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form
            class="space-y-4"
            onsubmit="event.preventDefault(); createAccount()"
        >
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Nombre de la Cuenta</label
                >
                <input
                    type="text"
                    id="account-name"
                    placeholder="Ej: Banco Principal"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    required
                />
            </div>
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Tipo</label
                >
                <select
                    id="account-type"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                >
                    <option value="Efectivo">Efectivo</option>
                    <option value="Banco">Banco</option>
                    <option value="Tarjeta de Crédito"
                        >Tarjeta de Crédito</option
                    >
                    <option value="Ahorros">Ahorros</option>
                    <option value="Inversión">Inversión</option>
                </select>
            </div>
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Balance Inicial</label
                >
                <input
                    type="number"
                    id="account-balance"
                    placeholder="0.00"
                    step="0.01"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    required
                />
            </div>
            <div class="flex gap-3 pt-4">
                <button
                    type="submit"
                    id="btn-create-account"
                    class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition font-medium flex justify-center items-center"
                >
                    <span id="btn-text-create-account">Crear</span>
                    <svg
                        id="btn-spinner-create-account"
                        class="hidden animate-spin ml-2 h-5 w-5 text-white"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"></circle>
                        <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        ></path>
                    </svg>
                </button>
                <button
                    type="button"
                    onclick="closeModal()"
                    class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
                    >Cancelar</button
                >
            </div>
        </form>
    </template>

    <template id="edit-account-template">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                Editar Cuenta
            </h3>
            <button
                onclick="closeModal()"
                class="text-gray-400 hover:text-gray-600"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form
            class="space-y-4"
            onsubmit="event.preventDefault(); updateAccount()"
        >
            <input type="hidden" id="edit-account-id" />
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Nombre de la Cuenta</label
                >
                <input
                    type="text"
                    id="edit-account-name"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    required
                />
            </div>
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Tipo</label
                >
                <select
                    id="edit-account-type"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                >
                    <option value="Efectivo">Efectivo</option>
                    <option value="Banco">Banco</option>
                    <option value="Tarjeta de Crédito"
                        >Tarjeta de Crédito</option
                    >
                    <option value="Ahorros">Ahorros</option>
                    <option value="Inversión">Inversión</option>
                </select>
            </div>
            <div>
                <label
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                    >Balance Actual</label
                >
                <input
                    type="number"
                    id="edit-account-balance"
                    step="0.01"
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-indigo-500"
                    required
                />
            </div>
            <div class="flex gap-3 pt-4">
                <button
                    type="submit"
                    id="btn-update-account"
                    class="flex-1 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition font-medium flex justify-center items-center"
                >
                    <span id="btn-text-update-account">Actualizar</span>
                    <svg
                        id="btn-spinner-update-account"
                        class="hidden animate-spin ml-2 h-5 w-5 text-white"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"></circle>
                        <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        ></path>
                    </svg>
                </button>
                <button
                    type="button"
                    onclick="closeModal()"
                    class="flex-1 bg-gray-200 dark:bg-slate-700 text-gray-700 dark:text-gray-300 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-slate-600 transition font-medium"
                    >Cancelar</button
                >
            </div>
        </form>
    </template>

    <script>
        import { authClient } from "../lib/auth-client";

        // Modal Logic
        window.openAddAccountModal = function () {
            const template = document.getElementById("add-account-template");
            const content = document.getElementById("modal-content");
            const overlay = document.getElementById("modal-overlay");

            content.innerHTML = template.innerHTML;
            overlay.classList.remove("hidden");
        };

        window.openEditAccountModal = function (id, name, type, balance) {
            const template = document.getElementById("edit-account-template");
            const content = document.getElementById("modal-content");
            const overlay = document.getElementById("modal-overlay");

            content.innerHTML = template.innerHTML;
            overlay.classList.remove("hidden");

            // Populate form
            setTimeout(() => {
                document.getElementById("edit-account-id").value = id;
                document.getElementById("edit-account-name").value = name;
                document.getElementById("edit-account-type").value = type;
                document.getElementById("edit-account-balance").value = balance;
            }, 0);
        };

        window.closeModal = function () {
            const overlay = document.getElementById("modal-overlay");
            overlay.classList.add("hidden");
        };

        // Dropdown Logic
        window.toggleAccountDropdown = function (id, event) {
            event.stopPropagation();
            const dropdown = document.getElementById(id);
            const isHidden = dropdown.classList.contains("hidden");

            // Close all other dropdowns
            document.querySelectorAll(".dropdown-menu").forEach((menu) => {
                menu.classList.add("hidden");
            });

            if (isHidden) {
                dropdown.classList.remove("hidden");
            }
        };

        document.addEventListener("click", function (event) {
            if (
                !event.target.closest(".dropdown-menu") &&
                !event.target.closest(".dropdown-btn")
            ) {
                document.querySelectorAll(".dropdown-menu").forEach((menu) => {
                    menu.classList.add("hidden");
                });
            }
        });

        // API Actions
        window.createAccount = async function () {
            const name = document.getElementById("account-name").value;
            const type = document.getElementById("account-type").value;
            const balance = document.getElementById("account-balance").value;

            const btn = document.getElementById("btn-create-account");
            const btnText = document.getElementById("btn-text-create-account");
            const btnSpinner = document.getElementById(
                "btn-spinner-create-account",
            );

            if (btn && btnText && btnSpinner) {
                btn.disabled = true;
                btnText.textContent = "Creando...";
                btnSpinner.classList.remove("hidden");
            }

            try {
                let headers = { "Content-Type": "application/json" };
                const sessionData = await authClient.getSession();
                if (sessionData?.data?.session?.token) {
                    headers["Authorization"] =
                        `Bearer ${sessionData.data.session.token}`;
                }

                const response = await fetch("/api/accounts", {
                    method: "POST",
                    headers: headers,
                    body: JSON.stringify({ name, type, balance }),
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const errorData = await response.json().catch(() => ({}));
                    alert(errorData.error || "Error al crear la cuenta");
                    if (btn && btnText && btnSpinner) {
                        btn.disabled = false;
                        btnText.textContent = "Crear";
                        btnSpinner.classList.add("hidden");
                    }
                }
            } catch (error) {
                console.error(error);
                alert("Error de conexión");
                if (btn && btnText && btnSpinner) {
                    btn.disabled = false;
                    btnText.textContent = "Crear";
                    btnSpinner.classList.add("hidden");
                }
            }
        };

        window.updateAccount = async function () {
            const id = document.getElementById("edit-account-id").value;
            const name = document.getElementById("edit-account-name").value;
            const type = document.getElementById("edit-account-type").value;
            const balance = document.getElementById(
                "edit-account-balance",
            ).value;

            const btn = document.getElementById("btn-update-account");
            const btnText = document.getElementById("btn-text-update-account");
            const btnSpinner = document.getElementById(
                "btn-spinner-update-account",
            );

            if (btn && btnText && btnSpinner) {
                btn.disabled = true;
                btnText.textContent = "Actualizando...";
                btnSpinner.classList.remove("hidden");
            }

            try {
                let headers = { "Content-Type": "application/json" };
                const sessionData = await authClient.getSession();
                if (sessionData?.data?.session?.token) {
                    headers["Authorization"] =
                        `Bearer ${sessionData.data.session.token}`;
                }

                const response = await fetch(`/api/accounts/${id}`, {
                    method: "PUT",
                    headers: headers,
                    body: JSON.stringify({ name, type, balance }),
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const errorData = await response.json().catch(() => ({}));
                    alert(errorData.error || "Error al actualizar la cuenta");
                    if (btn && btnText && btnSpinner) {
                        btn.disabled = false;
                        btnText.textContent = "Actualizar";
                        btnSpinner.classList.add("hidden");
                    }
                }
            } catch (error) {
                console.error(error);
                alert("Error de conexión");
                if (btn && btnText && btnSpinner) {
                    btn.disabled = false;
                    btnText.textContent = "Actualizar";
                    btnSpinner.classList.add("hidden");
                }
            }
        };

        window.deleteAccount = async function (id) {
            if (
                !confirm(
                    "¿Estás seguro de que deseas eliminar esta cuenta? Se eliminarán también todas sus transacciones.",
                )
            ) {
                return;
            }

            try {
                let headers = { "Content-Type": "application/json" };
                const sessionData = await authClient.getSession();
                if (sessionData?.data?.session?.token) {
                    headers["Authorization"] =
                        `Bearer ${sessionData.data.session.token}`;
                }

                const response = await fetch(`/api/accounts/${id}`, {
                    method: "DELETE",
                    headers: headers,
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const errorData = await response.json().catch(() => ({}));
                    alert(errorData.error || "Error al eliminar la cuenta");
                }
            } catch (error) {
                console.error(error);
                alert("Error de conexión");
            }
        };
    </script>
</Layout>
